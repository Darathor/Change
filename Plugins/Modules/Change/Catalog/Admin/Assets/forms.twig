{% macro price(name, label, required, roundable, help) %}
	<div class="control-group property{% if required %} required{% endif %}"
		data-ng-class="{'success': hasCorrectionOnProperty('{{ name }}')}">
		<label class="control-label" for="{{ name }}">{{ label }}</label>
		<div class="controls">
			<div class="input-append">
				<input type="number" class="input-mini" id="{{ name }}" name="{{ name }}" data-ng-model="document.{{ name }}"/>
				<span class="add-on" title="(=document.currencyLabel=)">(=document.currencyCode=)</span>
				<span class="add-on" title="(=document.taxModeLabel=)">(=document.taxModeCode=)</span>
			</div>
			{% if roundable %}
				<div class="btn-toolbar price-round-options has-captions">
					<div class="btn-group">
						<label class="caption">{{ i18n('m.change.catalog.document.price.round-down', ['ucf']) }}</label>
						<button data-ng-click="round10CentsDown()" class="btn btn-small" type="button"
							title="{{ i18n('m.change.catalog.document.price.round-down-tencents', ['ucf', 'attr']) }}">
							0,1
						</button>
						<button data-ng-click="roundIntDown()" class="btn btn-small" type="button"
							title="{{ i18n('m.change.catalog.document.price.round-down-unit', ['ucf', 'attr']) }}">
							1
						</button>
					</div>
					<div class="btn-group">
						<label class="caption">{{ i18n('m.change.catalog.document.price.round-up', ['ucf']) }}</label>
						<button data-ng-click="round10CentsUp()" class="btn btn-small" type="button"
							title="{{ i18n('m.change.catalog.document.price.round-up-tencent', ['ucf', 'attr']) }}">
							0,1
						</button>
						<button data-ng-click="round99Cents()" class="btn btn-small" type="button"
							title="{{ i18n('m.change.catalog.document.price.round-up-99cents', ['ucf', 'attr']) }}">
							0,99
						</button>
						<button data-ng-click="roundIntUp()" class="btn btn-small" type="button"
							title="{{ i18n('m.change.catalog.document.price.round-up-unit', ['ucf', 'attr']) }}">
							1
						</button>
					</div>
				</div>
			{% endif %}
			{% if help %}
				<span class="help-block">
				{{ help|raw }}
				</span>
			{% endif %}
		</div>
	</div>
{% endmacro %}