<div>
	<div class="input-group">
		<input type="text" ng-disabled="disabled" smart-float="" class="form-control" size="6" ng-model="value" ng-required="required"/>
		<span class="input-group-addon" ng-show="currencyCode">(= currencyCode =)</span>
		<span class="input-group-addon">
			<span ng-show="priceWithTax">{{ i18n('m.rbs.price.admin.directives_with_tax_abbr') }}</span>
			<span ng-hide="priceWithTax" ng-cloak="">{{ i18n('m.rbs.price.admin.directives_without_tax_abbr') }}</span>
		</span>
	</div>
	<div ng-shows="hasRounding" class="btn-toolbar price-round-options has-captions" ng-cloak="">
		<div class="btn-group">
			<button class="btn btn-default btn-sm" disabled="disabled" type="button">{{ i18n('m.rbs.catalog.admin.macros_round_down', ['ucf']) }} <i class="icon-long-arrow-down"></i></button>
			<button ng-click="round10CentsDown()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros_round_down_tencents', ['ucf']) }}">
				0,1
			</button>
			<button ng-click="roundIntDown()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros_round_down_unit', ['ucf']) }}">
				1
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default btn-sm" disabled="disabled" type="button">{{ i18n('m.rbs.catalog.admin.macros_round_up', ['ucf']) }} <i class="icon-long-arrow-up"></i></button>
			<button ng-click="round10CentsUp()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros_round_up_tencent', ['ucf']) }}">
				0,1
			</button>
			<button ng-click="round99CentsUp()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros_round_up_99cents', ['ucf']) }}">
				0,99
			</button>
			<button ng-click="roundIntUp()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros_round_up_unit', ['ucf']) }}">
				1
			</button>
		</div>
	</div>
</div>
