<div class="row">

	<rbs-workspace-config menu="Rbs_Price">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Price'|rbsURL:'home' =)">{{ i18n('m.rbs.price.admin.module_name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Price_Price'|rbsURL:'list' =)">{{ i18n('m.rbs.price.admin.price_list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<page-header title="{{ i18nAttr('m.rbs.price.admin.price_list', ['ucf']) }}"></page-header>
		<search-filters model="Rbs_Price_Price" filter-query="query" text-search="textSearch"></search-filters>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Price_Price' | documentURL:'new' =)">{{ i18n('m.rbs.price.admin.price_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLRbsPricePrice" model="Rbs_Price_Price" filter-query="query" actions="default" activable="false">
			<column name="boValue" align="right" width="90px"><a href ng-href="(=doc|documentURL=)">(=doc.formattedBoValue=)</a>
			<del ng-show="doc.formattedBoBaseValue">(=doc.formattedBoBaseValue=)</del>
			</column>
			<column name="sku" sort="sku.code">(=doc.sku.code=)</column>
			<column name="webStore" sort="webStore.label">(=doc.webStore.label=)</column>
		</rbs-document-list>
	</div>

</div>