<div class="control-group">
	<label class="control-label" data-not-a-property="" for="selectWebStores">
		{{ i18n('m.rbs.store.admin.js.webstore', ['ucf']) }}
	</label>

	<div class="controls">
		<button class="btn" disabled="disabled" type="button" data-ng-show="List.webStoresLoading">
			{{ i18n('m.rbs.store.admin.js.webstore-list-loading') }}
		</button>
		<div class="btn-group" ng-if="List.webStores.length <= 5">
			<button class="btn" data-ng-class="{active: List.selectedWebStore == webStore}" type="button"
				data-ng-repeat="webStore in List.webStores" data-ng-click="List.selectedWebStore = webStore">
				<i class="icon-ok" data-ng-show="List.selectedWebStore == webStore"></i> (= webStore.label =)
			</button>
		</div>
		<div class="btn-group" ng-if="List.webStores.length > 5">
			<button class="btn" data-toggle="dropdown" type="button"
				data-ng-class="{active: List.selectedWebStore}">
				<span data-ng-show="List.selectedWebStore"><i class="icon-ok"></i> (= List.selectedWebStore.label =)</span>
				<em data-ng-show="!List.selectedWebStore">...</em>
			</button>
			<button class="btn dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li data-ng-repeat="webStore in List.webStores" data-ng-click="List.selectedWebStore = webStore">
					<a><i class="icon-ok" data-ng-show="List.selectedWebStore == webStore"></i> (= webStore.label =)</a>
				</li>
			</ul>
		</div>
	</div>
</div>
