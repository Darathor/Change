<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text
			property="label" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Price_Tax', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text
			property="code" required="false"
			label="{{ i18nAttr(propertyKey('Rbs_Price_Tax', 'code'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Price_Tax', 'rounding'), ['ucf']) }}">
			<select name="rounding" class="form-control" ng-model="document.rounding" rbs-items-from-collection="Rbs_Price_Collection_TaxRoundingStrategy">
			</select>
			<span class="help-block">{{ i18n('m.rbs.price.documents.tax.rounding-help') }}</span>
		</rbs-field>

		<rbs-field-boolean
			property="cascading"
			label="{{ i18nAttr(propertyKey('Rbs_Price_Tax', 'cascading'), ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.price.documents.tax.cascading-help') }}</span>
		</rbs-field-boolean>

		<h3>{{ i18n(propertyKey('Rbs_Price_Tax', 'data'), ['ucf']) }}</h3>
		<table class="table table-striped">
			<thead>
			<th></th>
			<th data-ng-repeat="cat in document.data.c">
				(= cat =)
				<br/>
				<small><a ng-click="deleteCategory($index)">{{ i18n('m.rbs.price.admin.js.tax-delete-category') }}</a></small>
			</th>
			</thead>
			<tbody>
			<tr data-ng-repeat="zone in document.data.z">
				<td>(= zone =)
					<br/>
					<small data-ng-show="$index"><a
							ng-click="makeDefaultZone($index)">{{ i18n('m.rbs.price.admin.js.tax-make-default-zone') }}</a> |
					</small>
					<small><a ng-click="deleteZone($index)">{{ i18n('m.rbs.price.admin.js.tax-delete-zone') }}</a></small>

				</td>
				<td data-ng-repeat="cat in document.data.c track by $index">
					<div class="input-group">
						<input type="number" smart-float="" class="form-control" data-ng-model="document.data.r[$index][$parent.$index]" style="width: 60px"/>
						<span class="input-group-addon">%</span>
					<div>
				</td>
			</tr>
			</tbody>
		</table>
		<div class="input-group">
			<small>
				<i class="icon-plus-sign"></i> {{ i18n('m.rbs.price.admin.js.tax-add-zone', ['ucf']) }}
				<br />
				<div class="input-group">
					<input name="newZoneName" class="form-control" size="20" type="text" ng-model="newZoneName" />
					<span class="input-group-btn">
						<button ng-disabled="form.newZoneName.$error.zoneExists" type="button" class="btn btn-default" ng-click="addZone(newZoneName)">{{ i18n('m.rbs.price.admin.js.add', ['ucf']) }}</button>
					</span>
				</div>
				<p class="text-danger" ng-show="form.newZoneName.$error.zoneExists">{{ i18n('m.rbs.price.admin.js.zone-exists', ['ucf']) }}</p>
			</small>
		</div>
		<div class="input-group">
			<small>
				<i class="icon-plus-sign"></i> {{ i18n('m.rbs.price.admin.js.tax-add-category', ['ucf']) }}
				<br />
				<div class="input-group">
					<input name="newCategoryName" class="form-control" size="20" type="text" ng-model="newCategoryName" />
					<span class="input-group-btn">
						<button ng-disabled="form.newCategoryName.$error.categoryExists" type="button" class="btn btn-default" ng-click="addCategory(newCategoryName)">{{ i18n('m.rbs.price.admin.js.add', ['ucf']) }}</button>
					</span>
				</div>
				<p class="text-danger" ng-show="form.newCategoryName.$error.categoryExists">{{ i18n('m.rbs.price.admin.js.category-exists', ['ucf']) }}</p>
			</small>
		</div>
	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section="">
	</fieldset>

	<form-button-bar></form-button-bar>
</form>
