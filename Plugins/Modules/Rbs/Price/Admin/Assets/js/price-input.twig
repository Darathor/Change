	<div class="input-group">
		<input type="text" ng-disabled="disabled" smart-float="" class="form-control" size="6" ng-model="value"/>
		<span class="input-group-addon" ng-show="currencyCode">(= currencyCode =)</span>
		<span class="input-group-addon">
			<span ng-show="priceWithTax">{{ i18n('m.rbs.price.directives.priceinput.with-tax-abbr') }}</span>
			<span ng-hide="priceWithTax" ng-cloak="">{{ i18n('m.rbs.price.directives.priceinput.without-tax-abbr') }}
		</span>
	</div>

	<div ng-shows="hasRounding" class="btn-toolbar price-round-options has-captions" ng-cloak="">
		<div class="btn-group">
			<button class="btn btn-default btn-sm" disabled="disabled" type="button">{{ i18n('m.rbs.catalog.admin.macros.round-down', ['ucf']) }} <i class="icon-long-arrow-down"></i></button>
			<button ng-click="round10CentsDown()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros.round-down-tencents', ['ucf']) }}">
				0,1
			</button>
			<button ng-click="roundIntDown()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros.round-down-unit', ['ucf']) }}">
				1
			</button>
		</div>
		<div class="btn-group">
			<button class="btn btn-default btn-sm" disabled="disabled" type="button">{{ i18n('m.rbs.catalog.admin.macros.round-up', ['ucf']) }} <i class="icon-long-arrow-up"></i></button>
			<button ng-click="round10CentsUp()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros.round-up-tencent', ['ucf']) }}">
				0,1
			</button>
			<button ng-click="round99Cents()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros.round-up-99cents', ['ucf']) }}">
				0,99
			</button>
			<button ng-click="roundIntUp()" class="btn btn-default btn-sm" type="button"
				title="{{ i18nAttr('m.rbs.catalog.admin.macros.round-up-unit', ['ucf']) }}">
				1
			</button>
		</div>
	</div>
</div>
