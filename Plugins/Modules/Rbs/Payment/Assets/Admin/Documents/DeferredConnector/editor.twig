<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

		<rbs-field-text property="label" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="code" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'code'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="title" required="true" rbs-sync-value="document.label"
			sync-title="{{ i18nAttr('m.rbs.generic.admin.synchronize_title_label', ['ucf']) }}"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'title'), ['ucf']) }}"
			input-class="form-control">
		</rbs-field-text>

		<rbs-field-rich-text property="description" required="false"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'description'), ['ucf']) }}">
		</rbs-field-rich-text>

		<rbs-field-picker property="visual"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'visual'), ['ucf']) }}"
			accepted-model="Rbs_Media_Image"
			selector-title="{{ i18nAttr('m.rbs.payment.admin.connector_select_visual', ['ucf']) }}">
		</rbs-field-picker>

		<rbs-field-float property="minAmount"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'minAmount'), ['ucf']) }}"
			max-length="9" input-class="input-mini">
		</rbs-field-float>

		<rbs-field-float property="maxAmount"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'maxAmount'), ['ucf']) }}"
			max-length="9" input-class="input-mini">
		</rbs-field-float>

		<rbs-field-boolean property="autoValidatePayment"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'autoValidatePayment'), ['ucf']) }}">
			<span class="help-block">
				{{ i18nAttr('m.rbs.payment.admin.deferredconnector_autovalidatepayment_help', ['ucf']) }}
			</span>
		</rbs-field-boolean>

		<rbs-field-rich-text property="instructions" required="false"
			data-substitution-variables="(= document.substitutions|json =)"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'instructions'), ['ucf']) }}">
		</rbs-field-rich-text>

		<hr />

		<rbs-field-boolean property="processingMail"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'processingMail'), ['ucf']) }}">
		</rbs-field-boolean>

		<rbs-field-boolean property="successMail"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'successMail'), ['ucf']) }}">
		</rbs-field-boolean>

		<rbs-field-boolean property="errorMail"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'errorMail'), ['ucf']) }}">
		</rbs-field-boolean>
	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.adminjs.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.information', ['ucf']) }}"
		data-rbs-document-system-info-section="">
	</fieldset>

	<rbs-form-button-bar></rbs-form-button-bar>
</form>