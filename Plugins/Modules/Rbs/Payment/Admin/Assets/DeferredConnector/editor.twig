<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text property="label" required="true" input-class="input-block-level"
			label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="code" required="true" input-class="input-block-level"
				label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'code'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-picker property="visual" label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'visual'), ['ucf']) }}"
				accepted-model="Rbs_Media_Image" allow-creation="true" allow-edition="true"
				selector-title="{{ i18nAttr('m.rbs.payment.documents.deferredconnector.select-visual', ['ucf']) }}">
		</rbs-field-picker>

		<rbs-field-float property="minAmount"
				label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'minAmount'), ['ucf']) }}"
				max-length="9" input-class="input-mini">
		</rbs-field-float>

		<rbs-field-float property="maxAmount"
				label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'maxAmount'), ['ucf']) }}"
				max-length="9" input-class="input-mini">
		</rbs-field-float>
		
		<rbs-field-rich-text property="instructions" required="false" input-class="input-block-level"
				label="{{ i18nAttr(propertyKey('Rbs_Payment_DeferredConnector', 'instructions'), ['ucf']) }}">
		</rbs-field-rich-text>
	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>