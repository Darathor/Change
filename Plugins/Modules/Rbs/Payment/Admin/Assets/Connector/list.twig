<div>
	<rbs-workspace-config menu="Rbs_Payment">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Payment'|rbsURL:'home' =)">{{ i18n('m.rbs.payment.admin.js.module-name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Payment_Connector'|rbsURL:'list' =)">{{ i18n('m.rbs.payment.admin.js.connector-list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<page-header title="{{ i18nAttr('m.rbs.payment.admin.js.connector-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_Payment_Connector" filter-query="query" text-search="textSearch"></search-filters>

	<div class="add-elements-bar">
		{{ createLinks('Rbs_Payment_Connector') }}
	</div>

	<rbs-document-list data-dlid="DLRbsPaymentConnector"
			model="Rbs_Payment_Connector" filter-query="query" activable="true">
		<column name="visual" thumbnail="XS" thumbnail-path="doc.visual.id"></column>
		<column name="label" primary="true"></column>
		<column name="code"></column>
		<preview style="min-height: 200px">
			<img rbs-storage-image="doc.visual.id" rbs-image-container-colorizer="td.preview" thumbnail="L" class="absolute-top-left"/>
			<div style="margin-left: 290px;">
				<h4>(= doc.label =)</h4>
				<dl class="dl-horizontal">
					<dt>{{ i18n('m.rbs.tag.tags', ['ucf','lbl']) }}</dt>
					<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
					<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.no-tags', ['ucf']) }}</dd>
				</dl>
			</div>
		</preview>
	</rbs-document-list>
</div>