<div data-ng-hide="isEmpty()">
	<rbs-token-list ng-if="disableReordering || doc.list.length == 1" items="doc.list" rows="true" disable-reordering="true">
	</rbs-token-list>
	<rbs-token-list ng-if="!disableReordering && doc.list.length > 1" items="doc.list" rows="true"></rbs-token-list>
</div>

<p data-ng-show="isEmpty()" class="form-control form-control-static text-muted"
		style="margin-bottom: 0;">
	<span data-ng-show="selectorTitle" data-ng-bind="selectorTitle"></span>
	<span data-ng-hide="selectorTitle">{{ i18n('m.rbs.admin.admin.picker_no_element', ['ucf']) }}</span></p>

<div class="picker-toolbar form-inline">
	<button type="button" class="btn btn-default btn-sm pull-right" data-ng-click="clear()" data-ng-disabled="isEmpty()"
		title="{{ i18nAttr('m.rbs.admin.admin.picker_clear_tooltip', ['ucf']) }}">
		<i class="icon-eraser"></i>
		<span data-ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_clear') }}</span>
	</button>

	<select class="form-control input-sm" data-ng-model="models.model" data-ng-show="models.filtered.length"
		data-ng-disabled="!multiple && !isEmpty()" data-ng-options="m.label group by m.plugin for m in models.filtered"></select>

	<button type="button" class="btn btn-selection btn-sm" data-ng-disabled="!hasTragetUrl() || (!multiple && !isEmpty())"
		data-ng-click="beginSelectSession()" title="{{ i18nAttr('m.rbs.admin.admin.picker_in_place_tooltip', ['ucf', 'etc']) }}">
		<i class="icon-external-link"></i>
		<span data-ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_in_place', ['etc']) }}</span>
	</button>
</div>



