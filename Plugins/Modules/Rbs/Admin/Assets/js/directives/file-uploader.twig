<div>
	<input type="file" accept="(= fileAccept =)" name="file"/>
	<div>
		<button data-ng-show="loading" type="button" class="btn btn-default" disabled="disabled">
			<i class="icon-spinner icon-spin"></i> {{ i18n('m.rbs.admin.admin.reading', ['ucf']) }}
		</button>
		<span data-ng-show="fileSize && fileName">
			(= fileName =) &mdash; (= fileType =) &mdash; <span data-ng-bind-html="fileSize | rbsFileSize"></span>
		</span>
	</div>
</div>