{
	"mappings": {
		"document": {
			"properties": {
				"title":{
					"type":"multi_field",
					"fields":{
						"title": {
							"type": "string",
							"boost": 4,
							"analyzer": "text_analyzer"
						},
						"autocomplete":{
							"analyzer":"autocomplete",
							"type":"string"
						}
					}
				},
				"content": {
					"type": "string",
					"boost": 2,
					"analyzer": "text_analyzer"
				},
				"model": {
					"type": "string",
					"index": "not_analyzed"
				},
				"rootModel": {
					"type": "string",
					"index": "not_analyzed"
				},
				"canonicalSectionId": {
					"type": "integer"
				},
				"startPublication": {
					"type": "date"
				},
				"endPublication": {
					"type": "date"
				}
			}
		}
	},
	"settings": {
		"index": {
			"analysis": {
				"analyzer": {
					"text_analyzer": {
						"tokenizer": "standard",
						"filter": ["standard", "lowercase", "asciifolding", "elision", "text_snowball"]
					},
					"autocomplete":{
						"tokenizer":"standard",
						"filter":[ "standard", "lowercase", "french_stop", "asciifolding", "auto_ngram"]
					}
				},
				"filter": {
					"text_snowball": {
						"type": "snowball",
						"name": "French"
					},
					"auto_ngram":{
						"type":"ngram",
						"min_gram":3,
						"max_gram":15
					},
					"french_stop":{
						"type": "stop",
						"stopwords": ["_french_"]
					}
				}
			}
		}
	}
}