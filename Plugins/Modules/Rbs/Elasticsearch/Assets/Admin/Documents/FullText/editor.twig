<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Elasticsearch_FullText', 'clientName'), ['ucf']) }}" required="true">
			<select ng-model="document.clientName" class="form-control" required="true"
					rbs-items-from-collection="Rbs_Elasticsearch_Collection_Clients">
				<option value="">{{ i18n('m.rbs.admin.admin.select', ['ucf']) }}</option>
			</select>
		</rbs-field>

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Elasticsearch_FullText', 'analysisLCID'), ['ucf']) }}" required="true">
			<select ng-model="document.analysisLCID" class="form-control" required="true"
					rbs-items-from-collection="Rbs_Generic_Collection_Languages">
				<option value="">{{ i18n('m.rbs.admin.admin.select', ['ucf']) }}</option>
			</select>
		</rbs-field>

		<rbs-field-picker required="true" property="website"
				label="{{ i18nAttr(propertyKey('Rbs_Elasticsearch_FullText', 'website'), ['ucf']) }}"
				accepted-model="Rbs_Website_Website"
				selector-title="{{ i18nAttr('m.rbs.elasticsearch.admin.website_picker_title', ['ucf']) }}">
		</rbs-field-picker>
	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.information', ['ucf']) }}"
		data-rbs-document-system-info-section="">
	</fieldset>

	<rbs-form-button-bar></rbs-form-button-bar>
</form>