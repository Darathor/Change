<form class="form-inline" action="{{ functionCode('Rbs_Elasticsearch_Result', resultSection) }}" method="GET">
	<div class="input-group">
		<input type="text" class="form-control input-small" value="{{ parameters.searchText|e('html_attr') }}"/>
		<span class="input-group-btn">
			<button type="submit" class="btn btn-primary btn-small"><i class="glyphicon glyphicon-search"></i></button>
		</span>
	</div>
</form>