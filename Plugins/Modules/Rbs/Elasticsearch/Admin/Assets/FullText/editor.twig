<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text property="name" input-class="input-block-level"
				label="{{ i18nAttr('m.rbs.elasticsearch.documents.fulltext.name', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.elasticsearch.documents.fulltext.name-help', ['ucf']) }}</span>
		</rbs-field-text>

		<rbs-field label="{{ i18nAttr('m.rbs.elasticsearch.documents.fulltext.clientname', ['ucf']) }}" required="true">
			<select ng-model="document.clientName" rbs-items-from-collection="Rbs_Elasticsearch_Collection_Clients" required="true">
				<option value="">{{ i18n('m.rbs.elasticsearch.documents.fulltext.clientname-choose', ['ucf']) }}</option>
			</select>
		</rbs-field>

		<rbs-field label="{{ i18nAttr('m.rbs.elasticsearch.documents.fulltext.analysislcid', ['ucf']) }}" required="true">
			<select ng-model="document.analysisLCID" rbs-items-from-collection="Rbs_Generic_Collection_Languages" required="true">
				<option value="">{{ i18n('m.rbs.elasticsearch.documents.fulltext.analysislcid-choose', ['ucf']) }}</option>
			</select>
		</rbs-field>

		<rbs-field-picker property="website" label="{{ i18nAttr('m.rbs.elasticsearch.documents.fulltext.website', ['ucf']) }}"
				accepted-model="Rbs_Website_Website"
				selector-title="{{ i18nAttr('m.rbs.elasticsearch.documents.fulltext.website-picker-title', ['ucf']) }}"
				allow-creation="false"
				allow-edition="true">
		</rbs-field-picker>
	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>