<div>
	<rbs-workspace-config menu="Rbs_Website">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Website'|rbsURL:'home' =)">{{ i18nAttr('m.rbs.website.admin.js.module-name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Website_FunctionalPage'|rbsURL:'list' =)">{{ i18nAttr('m.rbs.website.documents.functionalpage-list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<page-header title="{{ i18nAttr('m.rbs.website.documents.functionalpage-list', ['ucf']) }}"></page-header>

	<div rbs-tip="Rbs_Website_FunctionalPageListHeader">
		{{ i18n('m.rbs.website.documents.functionalpage.functional-page-list-help') }}
	</div>

	<search-filters model="Rbs_Website_FunctionalPage" filter-query="query" text-search="textSearch"></search-filters>

	<div class="add-elements-bar">
		<a href ng-href="(= 'Rbs_Website_FunctionalPage' | documentURL:'new' =)">{{ i18n('m.rbs.website.documents.functionalpage-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLRbsWebsiteFunctionalPage"
	                   model="Rbs_Website_FunctionalPage"
	                   filter-query="query"
	                   actions="default">
		<column name="icon" width="30px" align="center">
			<span class="iconoverlay">
				<i class="icon-2x icon-file"></i>
			</span>
		</column>

		<column name="label" primary="true"></column>

		<column name="allowedFunctionsCode">
			<div ng-if="doc.allowedFunctionsCode">
				<span ng-repeat="func in doc.allowedFunctionsCode">
					<span class="label label-default">(= func =)</span>
				</span>
			</div>
			<div ng-if="! doc.allowedFunctionsCode">
				<a href ng-href="(= doc|documentURL:'form' =)?section=functions"><i class="icon-cog"></i> {{ i18n('m.rbs.website.documents.functionalpage.configure-functions', ['ucf']) }}</a>
			</div>
		</column>
	</rbs-document-list>
</div>