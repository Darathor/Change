<div>

	<rbs-workspace-config menu="Rbs_Website">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Website'|rbsURL:'home' =)">{{ i18nAttr('m.rbs.website.admin.js.module-name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Website_Website'|rbsURL:'list' =)">{{ i18nAttr('m.rbs.website.documents.website-list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<page-header title="{{ i18nAttr('m.rbs.website.documents.website-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_Website_Website" filter-query="query" text-search="textSearch"></search-filters>

	<div class="add-elements-bar">
		<a href ng-href="(= 'Rbs_Website_Website' | documentURL:'new' =)">{{ i18n('m.rbs.website.documents.website-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLWebsite1"
	               model="Rbs_Website_Website"
	               publishable="true"
	               filter-query="query"
	               actions="default"
	               use-properties="baseurl">
		<quick-actions>
			[action default]
			<a href="" ng-href="(= doc | documentURL:'functions':true =)">
				<i class="icon-cog"></i> {{ i18n('m.rbs.website.documents.topic.functions') }}
			</a>
		</quick-actions>
		<column name="label" primary="true">
			<strong><a href ng-href="(= doc|documentURL:'form'=)">(= doc.label =)</a></strong>
			<br><small><a href ng-href="(= doc.baseurl =)" target="_blank">(= doc.baseurl =) <i class="icon-external-link-sign"></i></a></small>
		</column>
		<column name="navigation"></column>
	</rbs-document-list>

</div>