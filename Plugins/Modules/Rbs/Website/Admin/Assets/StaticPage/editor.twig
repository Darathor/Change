<form name="form" data-ng-submit="submit()" class="form-horizontal" novalidate>
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text
				property="label" required="true"
				label="{{ i18nAttr('m.rbs.website.document.staticpage.label', ['ucf']) }}"
				input-class="input-block-level">
		</rbs-field-text>

		<rbs-field-text
				property="title" required="true"
				rbs-sync-value="document.label" sync-title="{{ i18nAttr('m.rbs.website.document.staticpage.synchronize-title-label', ['ucf']) }}"
				label="{{ i18nAttr('m.rbs.website.document.staticpage.title', ['ucf']) }}"
				input-class="input-block-level">
		</rbs-field-text>

		<rbs-field-picker
				property="pageTemplate" required="true" label="{{ i18nAttr('m.rbs.website.document.staticpage.pageTemplate', ['ucf']) }}"
				accepted-model="Rbs_Theme_PageTemplate"
				selector-title="{{ i18nAttr('m.rbs.website.document.staticpage.pagetemplate-picker-title', ['ucf']) }}">
		</rbs-field-picker>

		<hr />

		<rbs-field-picker property="section" required="true" label="{{ i18nAttr('m.rbs.website.document.staticpage.section', ['ucf']) }}"
		                  accepted-model="Rbs_Website_Section"
		                  selector-title="{{ i18nAttr('m.rbs.website.document.staticpage.section-picker-title', ['ucf']) }}"
		                  allow-creation="false">
			<span class="help-block">{{ i18n('m.rbs.website.document.staticpage.section-help', ['ucf']) }}</span>
		</rbs-field-picker>

		<hr />

		<rbs-field label="{{ i18nAttr('m.rbs.website.document.staticpage.editablecontent', ['ucf']) }}">
			<button class="btn" type="button" ng-click="editPage($event, document)">
				<i class="icon-edit"></i>
				{{ i18n('m.rbs.website.document.staticpage.open-page-editor', ['ucf']) }}
			</button>
			<span class="help-block" ng-show="editableContentInfo.length">
				{{ i18n('m.rbs.website.document.staticpage.content-zones', ['ucf', 'lab']) }}
				<span ng-repeat="zone in editableContentInfo" class="label">(=zone=)</span>
			</span>
		</rbs-field>
		<div data-role="edit-page-contents-confirmation"></div>

	</fieldset>

	<fieldset data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.Status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.Information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<fieldset
		data-ng-show="section=='timeline'"
		data-form-section-label="{{ i18nAttr('m.rbs.timeline.admin.message-list', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.Information', ['ucf']) }}"
		rbs-timeline>
	</fieldset>
	<form-button-bar></form-button-bar>
</form>