<div data-ng-controller="Rbs_Website_StaticPage_ListController">
	<page-header title="{{ i18nAttr('m.rbs.website.document.staticpage-list', ['ucf']) }}" filter-query="query"></page-header>

	<search-filters model="Rbs_Website_Website" filter-query="query" text-search="textSearch"></search-filters>

	<div>
		<a href="Rbs/Website/StaticPage/new">{{ i18n('m.rbs.website.document.staticpage-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLRbsWebsiteStaticPage"
	                   publishable="true"
	                   model="Rbs_Website_StaticPage"
	                   filter-query="query"
	                   actions="default">

		<column name="icon" width="30px" align="center">
			<span class="iconoverlay">
				<i class="icon-2x icon-file-text"></i>
			</span>
		</column>

		<column name="label" primary="true"></column>

	</rbs-document-list>
</div>