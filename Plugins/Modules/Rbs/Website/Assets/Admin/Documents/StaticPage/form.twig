<div class="row">

	<rbs-workspace-config>
		<rbs-breadcrumb-config>
			<rbs-location href="(= 'Rbs_Website'|rbsURL:'home' =)">{{ i18n('m.rbs.website.admin.module_name', ['ucf']) }}</rbs-location>
			<rbs-location href="(= 'Rbs_Website_StaticPage'|rbsURL:'list' =)">{{ i18n('m.rbs.website.admin.staticpage_list', ['ucf']) }}</rbs-location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div ng-switch="editMode">

		<div ng-switch-when="translate">
			<div class="document-form" rbs-full-width>
				<rbs-page-header sub-title="{{ i18nAttr(modelKey('Rbs_Website_StaticPage'), ['ucf']) }}"></rbs-page-header>
				<div class="rbs-document-editor rbs-document-editor-translate rbs-document-editor-rbs-website-staticpage-translate"></div>
			</div>
		</div>

		<div ng-switch-default="">
			<div rbs-aside-column>
				<rbs-default-asides-for-editor id="rbsWebsitePageDefaultAsides"></rbs-default-asides-for-editor>
				<div  id="rbsWebsitePageBlockPropertiesAside" style="display: none;">
					<div class="panel panel-default">
						<div class="panel-body">
							<a href="javascript:;" ng-href="(= document | rbsURL =)"><i class="icon-circle-arrow-left"></i> {{ i18n('m.rbs.website.admin.back_to_general_page_properties', ['ucf']) }}</a>
						</div>
					</div>

					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">{{ i18n('m.rbs.website.admin.block_properties', ['ucf']) }}</h3>
						</div>
						<div class="panel-body">
							<div id="rbsStructureEditorBlockPropertiesPopup"
								data-no-block-text="{{ i18nAttr('m.rbs.website.admin.no_block_selected', ['ucf']) }}"
								data-edit-in-content="{{ i18nAttr('m.rbs.website.admin.edit_in_content', ['ucf']) }}">
								{{ i18n('m.rbs.website.admin.no_block_selected', ['ucf']) }}
							</div>
						</div>
					</div>
				</div>
			</div>
			<div rbs-main-column>
				<div class="document-form">
					<rbs-page-header sub-title="{{ i18nAttr(modelKey('Rbs_Website_StaticPage'), ['ucf']) }}"></rbs-page-header>
					<div class="rbs-document-editor rbs-document-editor-rbs-website-staticpage"></div>
				</div>
			</div>
		</div>
	</div>

</div>