<div class="row">

	<rbs-workspace-config>
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Website'|rbsURL:'home' =)">{{ i18n('m.rbs.website.admin.module_name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Website_Topic'|rbsURL:'list' =)">{{ i18n('m.rbs.website.admin.topic_list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-aside-plugin-menu plugin="Rbs_Website"></rbs-aside-plugin-menu>
	</div>

	<div rbs-main-column>
		<page-header title="{{ i18nAttr('m.rbs.website.admin.topic_list', ['ucf']) }}"></page-header>
		<search-filters model="Rbs_Website_Topic" filter-query="query" text-search="textSearch"></search-filters>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Website_Topic' | rbsURL:'new' =)">{{ i18n('m.rbs.website.admin.topic_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLWebsiteTopics"
		                   model="Rbs_Website_Topic"
		                   publishable="true"
		                   filter-query="query"
		                   actions="default">
			<quick-actions>
				[action default]
				<a href="" ng-href="(= doc | rbsURL:'functions':true =)">
					<i class="icon-cog"></i> {{ i18n('m.rbs.website.admin.topic_functions') }}
				</a>
			</quick-actions>
			<column name="label" primary="true"></column>
		</rbs-document-list>
	</div>

</div>