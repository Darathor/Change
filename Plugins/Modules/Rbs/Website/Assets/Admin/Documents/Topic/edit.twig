<div class="row" rbs-document-editor-base="" model="Rbs_Website_Topic">

	<div class="col-md-12">
		<rbs-page-header document="document" sub-title="{{ i18nAttr(modelKey('Rbs_Website_Topic'), ['ucf']) }}"></rbs-page-header>
	</div>

	<div data-rbs-aside-column="">
		{% include '@Rbs_Admin/view/asides.twig' %}
		{% include '@Rbs_Admin/view/links.twig' %}
	</div>

	<div class="document-form" rbs-main-column>

		<form ng-submit="submit()" rbs-document-editor-edit="" rbs-document-editor-rbs-website-topic="">

			<fieldset rbs-editor-section=""
			          data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}"
			          data-editor-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

				<rbs-field-label-title property="title" required="true"
				                       label="{{ i18nAttr(propertyKey('Rbs_Website_Topic', 'label'), ['ucf']) }} / {{ i18nAttr(propertyKey('Rbs_Website_Topic', 'title'), ['ucf']) }}">
				</rbs-field-label-title>

				<rbs-field ng-hide="! document.indexPage" label="{{ i18nAttr(propertyKey('Rbs_Website_Topic', 'indexPage'), ['ucf']) }}">
					<div class="form-control-static">(=document.indexPage.label=)</div>
				</rbs-field>

				<rbs-field-picker property="section" required="true"
						label="{{ i18nAttr('m.rbs.website.admin.topic_section', ['ucf']) }}"
						select-model="{ancestors:'Rbs_Website_Section', abstract:false}"
						selector-title="{{ i18nAttr('m.rbs.website.admin.topic_section_picker_title', ['ucf']) }}">
					<div class="help-block">{{ i18n('m.rbs.website.admin.topic_section_help', ['ucf']) }}</div>
				</rbs-field-picker>
			</fieldset>

			<fieldset rbs-editor-section="publication"
			          data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.publication_properties', ['ucf']) }}"
			          data-editor-section-icon="icon-globe"
			          data-rbs-document-publication-section="">
			</fieldset>

			<fieldset rbs-editor-section="permissions"
			          data-editor-section-icon="icon-lock"
			          data-editor-section-label="{{ i18nAttr('m.rbs.website.documents.topic_permissions', ['ucf']) }}">

				<div rbs-tip="RbsWebsiteSectionPermissionRules" class="margin-top">
					{{ i18n('m.rbs.website.admin.section_permission_rule_helper', ['ucf']) }}
				</div>

				<rbs-field-picker-multiple property="authorizedUsers" required="false"
				                           label="{{ i18nAttr('m.rbs.website.documents.topic_authorized_users', ['ucf']) }}"
				                           accepted-model="Rbs_User_User"
				                           selector-title="{{ i18nAttr('m.rbs.website.admin.topic_users_picker_title', ['ucf']) }}">
				</rbs-field-picker-multiple>

				<rbs-field-picker-multiple property="authorizedGroups" required="false"
				                           label="{{ i18nAttr('m.rbs.website.documents.topic_authorized_groups', ['ucf']) }}"
				                           accepted-model="Rbs_User_Group"
				                           selector-title="{{ i18nAttr('m.rbs.website.admin.topic_groups_picker_title', ['ucf']) }}">
				</rbs-field-picker-multiple>
			</fieldset>

			<fieldset rbs-editor-section="systeminfo"
				data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.status', ['ucf']) }}"
				data-editor-section-icon="icon-info-sign"
				data-rbs-document-system-info-section="">
			</fieldset>

			<rbs-document-editor-button-bar></rbs-document-editor-button-bar>
		</form>

	</div>

</div>