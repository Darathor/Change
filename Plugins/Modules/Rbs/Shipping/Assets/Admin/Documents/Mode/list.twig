<div class="row">

	<rbs-workspace-config menu="Rbs_Shipping">
		<rbs-breadcrumb-config>
			<rbs-location href="(= 'Rbs_Shipping'|rbsURL:'home' =)">{{ i18n('m.rbs.shipping.admin.module_name', ['ucf']) }}</rbs-location>
			<rbs-location href="(= 'Rbs_Shipping_Mode'|rbsURL:'list' =)">{{ i18n('m.rbs.shipping.admin.mode_list', ['ucf']) }}</rbs-location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<rbs-page-header title="{{ i18nAttr('m.rbs.shipping.admin.mode_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false"
				model="Rbs_Shipping_Mode" filter="filter" ></rbs-document-filter-panel>

		<div class="add-elements-bar">
			{{ createLinks('Rbs_Shipping_Mode') }}
		</div>

		<rbs-document-list data-dlid="DLRbsShippingMode"
				model="Rbs_Shipping_Mode" filter-collection="filter" activable="true" correction="true">
			<rbs-column name="visual" thumbnail="XS" thumbnail-path="doc.visual.id"></rbs-column>
			<rbs-column name="label" primary="true"></rbs-column>
			<rbs-column name="code"></rbs-column>
			<rbs-preview style="min-height: 200px">
				<img rbs-storage-image="doc.visual.id" rbs-image-container-colorizer="td.preview" thumbnail="L" class="absolute-top-left"/>
				<div style="margin-left: 290px;">
					<h4>(= doc.label =)</h4>
					<dl class="dl-horizontal">
						<dt>{{ i18n('m.rbs.tag.admin.tags', ['ucf','lbl']) }}</dt>
						<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
						<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.admin.no_tags', ['ucf']) }}</dd>
					</dl>
				</div>
			</rbs-preview>
		</rbs-document-list>
	</div>

</div>