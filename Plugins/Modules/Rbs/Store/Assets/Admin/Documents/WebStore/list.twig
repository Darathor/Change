<div class="row">

	<rbs-workspace-config>
		<rbs-breadcrumb-config>
			<rbs-location href="(= 'Rbs_Store'|rbsURL:'home' =)">{{ i18nAttr('m.rbs.store.admin.webstore_list', ['ucf']) }}</rbs-location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-full-width>
		<rbs-page-header title="{{ i18nAttr('m.rbs.store.admin.webstore_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false"
				model="Rbs_Store_WebStore" filter="filter" ></rbs-document-filter-panel>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Store_WebStore' | rbsURL:'new' =)">{{ i18n('m.rbs.store.admin.webstore_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLRbsStoreWebStore" model="Rbs_Store_WebStore" filter-collection="filter">
			<rbs-column name="label" primary="true"></rbs-column>
			<rbs-column name="billingAreas">
				<span class="label" ng-repeat="ba in doc.billingAreas">
					<a href ng-href="(= ba | rbsURL =)">(= ba.label =)</a>
				</span>
			</rbs-column>
		</rbs-document-list>
	</div>

</div>