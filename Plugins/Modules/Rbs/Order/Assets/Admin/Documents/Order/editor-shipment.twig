<div class="panel panel-default" data-ng-if="!isContentEditable() || shipments.length">
	<div class="panel-heading">
		<h3 class="panel-title">
			<i class="icon-archive"></i>
			<a href="javascript:;" data-ng-click="orderContext.showShipmentUI = !orderContext.showShipmentUI">
				{{ i18n('m.rbs.order.admin.order_shipment', ['ucf', 'lab']) }} (= shipments.length =)
				<i data-ng-class="{true: 'icon-chevron-up', false: 'icon-chevron-down'}[orderContext.showShipmentUI]"></i>
			</a>
		</h3>
	</div>
	<div class="panel-body" data-ng-show="orderContext.showShipmentUI">
		<div class="add-elements-bar">
			<a data-ng-if="document.id > 0" href="javascript:;"
				data-ng-href="(= 'Rbs_Order_Shipment' | rbsURL:'new':{orderId: document.id} =)">
				{{ i18n('m.rbs.order.admin.order_add_shipment', ['ucf']) }}
			</a>
		</div>
		<table class="table table-striped table-bordered no-bottom-margin document-list" data-ng-show="shipments.length > 0">
			<thead>
				<tr>
					<th>{{ i18n('m.rbs.order.documents.shipment_code', ['ucf']) }}</th>
					<th>{{ i18n('m.rbs.order.documents.shipment_shippingmodecode', ['ucf']) }}</th>
					<th>{{ i18n('m.rbs.order.documents.shipment_trackingcode', ['ucf']) }}</th>
					<th>{{ i18n('m.rbs.order.documents.shipment_carrierstatus', ['ucf']) }}</th>
				</tr>
			</thead>
			<tr class="normal-row" data-ng-repeat="shipment in shipments">
				<td><a href="javascript:;" data-ng-href="(= shipment | rbsURL =)">(= shipment.code =)</a></td>
				<td>(= shipment.shippingModeCode =)</td>
				<td>(= shipment.trackingCode =)</td>
				<td>(= shipment.carrierStatus =)</td>
			</tr>
		</table>
	</div>
</div>