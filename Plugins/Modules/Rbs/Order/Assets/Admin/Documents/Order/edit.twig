<div class="row" data-rbs-document-editor-base="" data-model="Rbs_Order_Order">
	<div class="col-md-12">
		{% set currentRouteName = 'edit' %}
		{% include '@Rbs_Order/Documents/Order/header.twig' %}
	</div>

	<div class="document-form" data-rbs-full-width="">
		<form data-ng-submit="submit()" class="form-horizontal" data-rbs-document-editor-edit=""
			data-rbs-document-editor-rbs-order-order-edit="">
			{% include '@Rbs_Order/Documents/Order/editor-head.twig' %}
			<rbs-order-lines></rbs-order-lines>
			{% include '@Rbs_Order/Documents/Order/editor-shipping.twig' %}
			{% include '@Rbs_Order/Documents/Order/editor-payment.twig' %}

			<rbs-document-editor-button-bar>
				<button type="button" data-ng-if="document.processingStatus == 'edition'"
					data-ng-click="updateOrderStatus('processing', $event)" class="btn btn-headline btn-success"
					data-ng-disabled="document.lines.length === 0 || !isUnchanged()">
					<i class="icon-lock"></i>{{ i18n('m.rbs.order.admin.order_start_processing_button', ['ucf']) | raw }}
				</button>
				<button type="button" data-ng-if="document.processingStatus == 'processing'"
					data-ng-click="updateOrderStatus('finalized', $event)" class="btn btn-headline btn-success"
					data-ng-disabled="!isUnchanged()">
					<i class="icon-ok-sign"></i>{{ i18n('m.rbs.order.admin.order_finalize_button', ['ucf']) | raw }}
				</button>
				<button type="button" data-ng-if="document.processingStatus == 'processing'"
					data-ng-click="updateOrderStatus('edition', $event)" class="btn btn-headline btn-warning"
					data-ng-disabled="!isUnchanged()">
					<i class="icon-unlock"></i>{{ i18n('m.rbs.order.admin.order_make_editable_button', ['ucf']) | raw }}
				</button>
				<button type="button" data-ng-if="document.processingStatus == 'processing'"
					data-ng-click="updateOrderStatus('canceled', $event)" class="btn btn-headline btn-danger"
					data-ng-disabled="!isUnchanged()">
					<i class="icon-remove-sign"></i>{{ i18n('m.rbs.order.admin.order_cancel_button', ['ucf']) | raw }}
				</button>
			</rbs-document-editor-button-bar>
		</form>
	</div>
</div>