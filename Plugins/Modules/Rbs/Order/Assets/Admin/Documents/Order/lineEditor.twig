<div class="col-md-6">
	<rbs-field label="{{ i18nAttr('m.rbs.order.admin.order_sku', ['ucf']) }}" class="required" >
		<input type="text" class="form-control" required="required" ng-model="doc.items[0].codeSKU" />
	</rbs-field>

	<rbs-field label="{{ i18nAttr('m.rbs.order.admin.order_designation', ['ucf']) }}" class="required" >
		<input type="text" class="form-control" required="required" ng-model="doc.designation" />
	</rbs-field>
</div>

<div class="col-md-6">
	<rbs-field label="{{ i18nAttr('m.rbs.order.admin.order_quantity', ['ucf']) }}" class="required">
		<div class="input-group">
			<input type="number" min="1" required="true" ng-model="doc.quantity" class="form-control"/>
		</div>
	</rbs-field>

	<rbs-field label="{{ i18nAttr('m.rbs.order.admin.order_unit_price', ['ucf']) }}" class="required" >
		<rbs-price-input ng-model="doc.items[0].priceValue" data-currency-code="priceInfo.billingArea.currencyCode" data-price-with-tax="billingArea.boEditWithTax" required="required"/>
	</rbs-field>
	<rbs-field>
		<table ng-show="currentTaxInfo" class="table table-striped">
			<thead>
				<th>{{ i18n(modelKey('Rbs_Price_Tax'), ['ucf']) }}</th>
				<th>{{ i18n('m.rbs.price.documents.tax_category', ['ucf']) }}</th>
			</thead>
			<tbody>
				<tr ng-repeat="tax in currentTaxInfo">
					<td>(=tax.code=)<br/>
						<small>(=tax.label=)</small>
					</td>
					<td>
						<select ng-model="doc.items[0].taxCategories[tax.code]" class="input-medium form-control" ng-options="c.code as c.formattedRate + '  (' + c.code + ')' for c in tax.categories">
							<option value="">{{ i18n('m.rbs.price.documents.tax_not_applicable', ['ucf']) }}</option>
						</select>
					</td>
				</tr>
			</tbody>
		</table>
	</rbs-field>
</div>