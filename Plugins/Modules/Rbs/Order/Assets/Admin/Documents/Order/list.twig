<div class="row">
	<div data-rbs-aside-column="">
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div data-rbs-main-column="">
		<rbs-page-header title="{{ i18nAttr('m.rbs.order.admin.order_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false" model="Rbs_Order_Order" filter="filter" ></rbs-document-filter-panel>

		<div class="add-elements-bar">
			<a href="javascript:;" data-ng-href="(= 'Rbs_Order_Order' | rbsURL:'new' =)">
				{{ i18n('m.rbs.order.admin.order_create', ['ucf']) }}
			</a>
		</div>

		<rbs-document-list data-dlid="DLRbsOrderOrder"
				model="Rbs_Order_Order" filter-collection="filter">
			<rbs-column name="code" primary="true"></rbs-column>
			<rbs-column name="processingStatus" align="center"
				label="{{ i18nAttr('m.rbs.order.admin.order_statuses', ['ucf']) }}">
				<span data-rbs-order-status-indicators="" data-order="doc"></span>
			</rbs-column>
			<rbs-column name="paymentAmountWithTaxes">(= doc.formattedPaymentAmountWithTaxes =)</rbs-column>
			<rbs-column name="creationDate">(= doc.creationDate | rbsDateTime =)</rbs-column>
		</rbs-document-list>
	</div>
</div>