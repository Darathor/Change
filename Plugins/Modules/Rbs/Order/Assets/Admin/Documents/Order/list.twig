<div class="row">
	<div data-rbs-aside-column="">
		{% include '@Rbs_Admin/view/asides.twig' %}
		{% include '@Rbs_Admin/view/links.twig' %}
	</div>

	<div data-rbs-main-column="">
		<rbs-page-header title="{{ i18nAttr('m.rbs.order.admin.order_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false" filter="filter" model="Rbs_Order_Order"></rbs-document-filter-panel>

		<div class="add-elements-bar">
			{% for newDocumentLink in attributes['newDocumentLinks'] %}
				<a href="javascript:;" data-ng-href="(= '{{ newDocumentLink.modelName }}' | rbsURL:'new' =)">
					{{ newDocumentLink.label }}
				</a>
			{% endfor %}
		</div>

		<rbs-document-list data-dlid="DLRbsOrderOrder" model="Rbs_Order_Order" filter-collection="filter" use-properties="statusTitle">
			<rbs-column name="code" primary="true"></rbs-column>
			<rbs-column name="processingStatus" align="center"
				label="{{ i18nAttr('m.rbs.order.admin.order_statuses', ['ucf']) }}">
				<span data-rbs-order-status-indicators="" data-order="doc"></span>
			</rbs-column>
			<rbs-column name="paymentAmount">(= doc.formattedPaymentAmount =)</rbs-column>
			<rbs-column name="creationDate">(= doc.creationDate | rbsDateTime =)</rbs-column>
		</rbs-document-list>
	</div>
</div>