<div class="row">

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<rbs-page-header title="{{ i18nAttr('m.rbs.order.admin.invoice_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false"
				model="Rbs_Order_Invoice" filter="filter" ></rbs-document-filter-panel>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Order_Invoice' | rbsURL:'new' =)">{{ i18n('m.rbs.order.admin.invoice_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLRbsOrderInvoice"
				model="Rbs_Order_Invoice" filter-collection="filter">
			<rbs-column name="code" primary="true"></rbs-column>
			<rbs-column name="amountWithTax"></rbs-column>
			<rbs-column name="currencyCode"></rbs-column>
			<rbs-column name="creationDate"></rbs-column>
			<rbs-preview style="min-height: 200px">
				<div style="margin-left: 290px;">
					<h4>(= doc.label =)</h4>
					<dl class="dl-horizontal">
						<dt>{{ i18n('m.rbs.tag.admin.tags', ['ucf','lbl']) }}</dt>
						<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
						<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.admin.no_tags', ['ucf']) }}</dd>
					</dl>
				</div>
			</rbs-preview>
		</rbs-document-list>
	</div>

</div>