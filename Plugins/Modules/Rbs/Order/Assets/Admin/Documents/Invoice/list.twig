<div class="row">

	<rbs-workspace-config menu="Rbs_Order">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Order'|rbsURL:'home' =)">{{ i18n('m.rbs.order.admin.module_name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Order_Invoice'|rbsURL:'list' =)">{{ i18n('m.rbs.order.admin.invoice_list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<page-header title="{{ i18nAttr('m.rbs.order.admin.invoice_list', ['ucf']) }}"></page-header>
		<search-filters model="Rbs_Order_Invoice" filter-query="query" text-search="textSearch"></search-filters>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Order_Invoice' | rbsURL:'new' =)">{{ i18n('m.rbs.order.admin.invoice_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLRbsOrderInvoice"
				model="Rbs_Order_Invoice" filter-query="query">
			<column name="code" primary="true"></column>
			<column name="amountWithTax"></column>
			<column name="currencyCode"></column>
			<column name="creationDate"></column>
			<preview style="min-height: 200px">
				<div style="margin-left: 290px;">
					<h4>(= doc.label =)</h4>
					<dl class="dl-horizontal">
						<dt>{{ i18n('m.rbs.tag.admin.tags', ['ucf','lbl']) }}</dt>
						<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
						<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.admin.no_tags', ['ucf']) }}</dd>
					</dl>
				</div>
			</preview>
		</rbs-document-list>
	</div>

</div>