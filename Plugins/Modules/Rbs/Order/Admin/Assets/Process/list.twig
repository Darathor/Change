<div>
	<rbs-workspace-config menu="Rbs_Order">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Order'|rbsURL:'home' =)">{{ i18n('m.rbs.order.admin.js.module-name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Order_Process'|rbsURL:'list' =)">{{ i18n('m.rbs.order.admin.js.process-list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<page-header title="{{ i18nAttr('m.rbs.order.admin.js.process-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_Order_Process" filter-query="query" text-search="textSearch"></search-filters>

	<div>
		<a href ng-href="(= 'Rbs_Order_Process' | documentURL:'new' =)">{{ i18n('m.rbs.order.admin.js.process-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLRbsOrderProcess"
			model="Rbs_Order_Process" filter-query="query" activable="true">
		<column name="label" primary="true"></column>
		<preview style="min-height: 200px">
			<div style="margin-left: 290px;">
				<h4>(= doc.label =)</h4>
				<dl class="dl-horizontal">
					<dt>{{ i18n('m.rbs.tag.tags', ['ucf','lbl']) }}</dt>
					<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
					<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.no-tags', ['ucf']) }}</dd>
				</dl>
			</div>
		</preview>
	</rbs-document-list>
</div>