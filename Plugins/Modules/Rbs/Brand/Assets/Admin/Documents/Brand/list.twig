<div class="row">
	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<rbs-page-header title="{{ i18nAttr('m.rbs.brand.admin.brand_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false"
				model="Rbs_Brand_Brand" filter="filter" ></rbs-document-filter-panel>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Brand_Brand' | rbsURL:'new' =)">{{ i18n('m.rbs.brand.admin.brand_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLRbsBrandBrand"
			model="Rbs_Brand_Brand" publishable="true" filter-collection="filter">
			<rbs-column name="visual" thumbnail="XS" thumbnail-path="doc.visual.id"></rbs-column>
			<rbs-column name="label" primary="true"></rbs-column>
			<rbs-column name="websiteUrl">
				<small ng-if="doc.websiteUrl"><a href ng-href="(= doc.websiteUrl =)" target="_blank">(= doc.websiteUrl =) <i class="icon-external-link-sign"></i></a></small>
			</rbs-column>

			<rbs-preview style="min-height: 200px">
				<img rbs-storage-image="doc.visual.id" rbs-image-container-colorizer="td.preview" thumbnail="L" class="absolute-top-left"/>
				<div style="margin-left: 290px;">
					<h4>(= doc.label =)</h4>
					<dl class="dl-horizontal">
						<dt>{{ i18n(propertyKey('Rbs_Brand_Brand', 'websiteUrl'), ['ucf','lab']) }}</dt>
						<dd ng-if="doc.websiteUrl"><a href ng-href="(= doc.websiteUrl =)" target="_blank">(= doc.websiteUrl =)</a></dd>
						<dd ng-if="! doc.websiteUrl">-</dd>
						<dt>{{ i18n('m.rbs.tag.admin.tags', ['ucf','lab']) }}</dt>
						<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
						<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.admin.no_tags', ['ucf']) }}</dd>
					</dl>
					<p ng-bind-html="doc.description.h"></p>
				</div>
			</rbs-preview>
		</rbs-document-list>
	</div>

</div>