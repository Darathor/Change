<div class="form-group{{ errorClassName }}">
	{% include 'Rbs_Simpleform/default-label.twig' %}
	<div class="{{ rightColumnElementClass }}">
		{% for item in collectionItems(fieldInfos.field.parameters.collectionCode) %}
			<div class="checkbox">
				<label>
					<input type="checkbox" name="{{ fieldName }}[]" id="{{ fieldId }}_{{ item.value }}" value="{{ item.value }}"
						{%- if item.value in fieldInfos.value %} checked="checked"{% endif %}>
					{{- item.title }}
				</label>
			</div>
		{% endfor %}
		{% include 'Rbs_Simpleform/default-error-messages.twig' %}
		{% include 'Rbs_Simpleform/default-help-text.twig' %}
	</div>
</div>