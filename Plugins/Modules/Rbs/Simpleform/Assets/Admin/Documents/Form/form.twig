<div class="row">

	<rbs-workspace-config>
		<rbs-breadcrumb-config>
			<rbs-location href="(= 'Rbs_Simpleform'|rbsURL:'home' =)">{{ i18nAttr('m.rbs.simpleform.admin.module_name', ['ucf']) }}</rbs-location>
			<rbs-location href="(= 'Rbs_Simpleform_Form'|rbsURL:'list' =)">{{ i18nAttr('m.rbs.simpleform.admin.form_list', ['ucf']) }}</rbs-location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-editor></rbs-default-asides-for-editor>
	</div>

	<div class="document-form" rbs-main-column>
		<rbs-page-header document="document" sub-title="{{ i18nAttr(modelKey('Rbs_Simpleform_Form'), ['ucf']) }}"></rbs-page-header>
		<div ng-switch="editMode">
			<div ng-switch-when="translate" class="rbs-document-editor rbs-document-editor-translate rbs-document-editor-rbs-simpleform-form-translate"></div>
			<div ng-switch-default="" class="rbs-document-editor rbs-document-editor-rbs-simpleform-form"></div>
		</div>
	</div>

</div>