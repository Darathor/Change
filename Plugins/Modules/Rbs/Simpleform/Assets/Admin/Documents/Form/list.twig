<div class="row">

	<rbs-workspace-config menu="Rbs_Simpleform">
		<rbs-breadcrumb-config>
			<location
					href="(= 'Rbs_Simpleform'|rbsURL:'home' =)">{{ i18n('m.rbs.simpleform.admin.module_name', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<page-header title="{{ i18nAttr('m.rbs.simpleform.admin.form_list', ['ucf']) }}"></page-header>
		<search-filters model="Rbs_Simpleform_Form" filter-query="query" text-search="textSearch"></search-filters>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Simpleform_Form' | rbsURL:'new' =)">{{ i18n('m.rbs.simpleform.admin.form_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLCollection1" model="Rbs_Simpleform_Form" filter-query="query">
			<column name="label" primary="true"></column>
		</rbs-document-list>
	</div>

</div>