<div>
	<rbs-field-integer label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_min_size', ['ucf']) }}"
		property="document.parameters.minSize">
	</rbs-field-integer>

	<rbs-field-integer label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_max_size', ['ucf']) }}"
		property="document.parameters.maxSize">
	</rbs-field-integer>

	<rbs-field-text label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_pattern', ['ucf']) }}"
		property="document.parameters.pattern">
	</rbs-field-text>

	<rbs-field-boolean label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_auto_complete', ['ucf']) }}"
		property="document.parameters.autoComplete">
		<div class="help-block">{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_auto_complete_help', ['ucf']) }}</div>
	</rbs-field-boolean>

	<rbs-field-boolean label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_auto_correct', ['ucf']) }}"
		property="document.parameters.autoCorrect">
		<div class="help-block">{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_auto_correct_help', ['ucf']) }} <span class="text-warning">{{ i18nAttr('m.rbs.simpleform.admin.field_warning_only_ios', ['ucf']) }}</span></div>
	</rbs-field-boolean>

	<rbs-field label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_auto_capitalize', ['ucf']) }}">
		<select ng-model="document.parameters.autoCapitalize" class="form-control" ng-required="true"
			name="document.parameters.autoCapitalize" rbs-items-from-collection="Rbs_Simpleform_AutoCapitalizeOptions">
		</select>
		<div class="help-block">{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_auto_capitalize_help', ['ucf']) }} <span class="text-warning">{{ i18nAttr('m.rbs.simpleform.admin.field_warning_only_ios', ['ucf']) }}</span></div>
	</rbs-field>

	<rbs-field-text label="{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_place_holder', ['ucf']) }}"
		property="document.parameters.placeHolder">
		<div class="help-block">{{ i18nAttr('m.rbs.simpleform.admin.field_parameters_place_holder_help', ['ucf']) }}</div>
	</rbs-field-text>

	<rbs-field-rich-text label="{{ i18nAttr('m.rbs.simpleform.documents.field_helptext', ['ucf']) }}"
		property="document.helpText">
	</rbs-field-rich-text>
</div>