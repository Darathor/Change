<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

		<rbs-field-text property="code" label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'code'), ['ucf']) }}"
			max-length="80" input-class="input-block-level">
		</rbs-field-text>

		<rbs-field-boolean
				property="virtual" label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'virtual'), ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.stock.documents.sku.virtual-help') }}</span>
		</rbs-field-boolean>

		<rbs-field ng-hide="document.virtual" label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'physicalProperties'), ['ucf']) }}">
			<div class="form-inline">
				<div class="form-group" style="margin:0;">
					<div class="input-group">
						<span class="input-group-addon">{{ i18n('m.rbs.stock.admin.js.mass-abbr') }}</span>
						<input class="form-control" size="7" ng-model="document.physicalProperties.mass.value" smart-float="" type="text" placeholder="{{ i18nAttr('m.rbs.stock.admin.js.mass') }}">
						<span class="input-group-addon contains-input">
							<select class="form-control" ng-model="document.physicalProperties.mass.unit">
								<option value="kg">{{ i18n('m.rbs.stock.admin.js.kg-abbr') }}</option>
								<option value="g">{{ i18n('m.rbs.stock.admin.js.g-abbr') }}</option>
								<option value="lbs">{{ i18n('m.rbs.stock.admin.js.lbs-abbr') }}</option>
							</select>
						</span>
					</div>
				</div>
			</div>

			<div class="form-inline" style="margin-top:4px;">
				<div class="form-group" style="margin:0;">
					<div class="input-group">
						<span class="input-group-addon">{{ i18n('m.rbs.stock.admin.js.length-abbr') }}</span>
						<input class="form-control" size="7" smart-float="" ng-model="document.physicalProperties.length.value" min="0" type="text" placeholder="{{ i18nAttr('m.rbs.stock.admin.js.length') }}"/>
						<span class="input-group-addon contains-input">
							<select class="form-control" ng-model="document.physicalProperties.length.unit">
								<option value="cm">{{ i18n('m.rbs.stock.admin.js.cm-abbr') }}</option>
								<option value="m">{{ i18n('m.rbs.stock.admin.js.m-abbr') }}</option>
								<option value="in">{{ i18n('m.rbs.stock.admin.js.in-abbr') }}</option>
							</select>
						</span>
					</div>
				</div>
				<span>x</span>
				<div class="form-group" style="margin:0;">
					<div class="input-group">
						<span class="input-group-addon">{{ i18n('m.rbs.stock.admin.js.width-abbr') }}</span>
						<input class="form-control" size="7" smart-float="" ng-model="document.physicalProperties.width.value" min="0" type="text" placeholder="{{ i18nAttr('m.rbs.stock.admin.js.width') }}"/>
						<span class="input-group-addon contains-input">
							<select class="form-control" ng-model="document.physicalProperties.width.unit">
								<option value="cm">{{ i18n('m.rbs.stock.admin.js.cm-abbr') }}</option>
								<option value="m">{{ i18n('m.rbs.stock.admin.js.m-abbr') }}</option>
								<option value="in">{{ i18n('m.rbs.stock.admin.js.in-abbr') }}</option>
							</select>
						</span>
					</div>
				</div>
				<span>x</span>
				<div class="form-group" style="margin:0;">
					<div class="input-group">
						<span class="input-group-addon">{{ i18n('m.rbs.stock.admin.js.height-abbr') }}</span>
						<input class="form-control" size="7" smart-float="" ng-model="document.physicalProperties.height.value" min="0" type="text" placeholder="{{ i18nAttr('m.rbs.stock.admin.js.height') }}"/>
						<span class="input-group-addon contains-input">
							<select class="form-control" ng-model="document.physicalProperties.height.unit">
								<option value="cm">{{ i18n('m.rbs.stock.admin.js.cm-abbr') }}</option>
								<option value="m">{{ i18n('m.rbs.stock.admin.js.m-abbr') }}</option>
								<option value="in">{{ i18n('m.rbs.stock.admin.js.in-abbr') }}</option>
							</select>
						</span>
					</div>
				</div>
			</div>

		</rbs-field>
		<rbs-field
			label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'unit'), ['ucf']) }}">
			<select ng-model="unit" class="form-control" rbs-items-from-collection="Rbs_Stock_Collection_Unit">
			</select>
		</rbs-field>

		<rbs-field-integer
			property="quantityIncrement"
			min="1"
			max="10000"
			label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'quantityIncrement'), ['ucf']) }}">
		</rbs-field-integer>

		<rbs-field-integer
			property="minQuantity"
			min="1"
			max="10000"
			label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'minQuantity'), ['ucf']) }}">
		</rbs-field-integer>

		<rbs-field-integer
			min="1"
			max="10000"
			property="maxQuantity"
			label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'maxQuantity'), ['ucf']) }}">
		</rbs-field-integer>

		<rbs-field-boolean property="unlimitedInventory"
			label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'unlimitedInventory'), ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.stock.documents.sku.unlimitedinventory-help') }}</span>
		</rbs-field-boolean>

		<rbs-field-boolean ng-hide="document.unlimitedInventory"
				property="allowBackorders"
				label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'allowBackorders'), ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.stock.documents.sku.allowbackorders-help') }}</span>
		</rbs-field-boolean>

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'thresholds'), ['ucf']) }}">
			<rbs-thresholds-editor thresholds-values="document.thresholds">
			</rbs-thresholds-editor>
		</rbs-field>

		<rbs-field-boolean
			property="allowQuantitySplit"
			label="{{ i18nAttr(propertyKey('Rbs_Stock_Sku', 'allowQuantitySplit'), ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.stock.documents.sku.allowquantitysplit-help') }}</span>
		</rbs-field-boolean>

	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.adminjs.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.information', ['ucf']) }}"
		data-document-system-info-section="">
	</fieldset>

	<form-button-bar></form-button-bar>
</form>