<div data-ng-repeat="threshold in thresholds">
	<small>
		<a ng-show="$first || (threshold.l - thresholds[$index-1].l) > 1"
			href="javascript:;" ng-click="createThreshold($index)"><i class="icon-plus-sign"> </i>{{ i18n('m.rbs.stock.documents.sku.threshold-add') }}</a>
	</small>
	<div>
		<span ng-show="threshold.l < 1000000">{{ i18n('m.rbs.stock.documents.sku.threshold-less-or-equals') }}
			<input type="number" ng-model="threshold.l" style="width: 80px;" ng-blur="sortThreshold()"/></span>
		<span ng-show="threshold.l >= 1000000">{{ i18n('m.rbs.stock.documents.sku.unlimitedinventory', ['ucf']) }}</span>
		, {{ i18n('m.rbs.stock.documents.sku.threshold-use') }} <select ng-model="threshold.c" rbs-items-from-collection="Rbs_Stock_Collection_Threshold"></select>
		<small>
			<a href="javascript:;" ng-click="removeThreshold($index)" ng-hide="$last"><i class="icon-minus-sign"> </i>{{ i18n('m.rbs.stock.documents.sku.threshold-remove') }}</a>
		</small>
	</div>
</div>
