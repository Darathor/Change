<div data-ng-controller="Rbs_User_Group_ListController">
	<page-header title="{{ i18nAttr('m.rbs.user.document.group-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_User_Group" filter-query="query" text-search="textSearch"></search-filters>
	<div>
		<a href ng-href="(= 'Rbs_User_Group' | documentURL:'new' =)">{{ i18n('m.rbs.user.document.group-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLGroup1"
	               publishable="true"
	               model="Rbs_User_Group"
	               modification-date="false"
	               filter-query="query">
		<quick-actions>
			[action default] ||
			<a href="(= doc | documentURL : 'permission' =)">{{ i18nAttr('m.rbs.user.admin.permission') }}</a>
		</quick-actions>
		<column name="label" primary="true"></column>
		<column name="realm"></column>
	</rbs-document-list>
</div>