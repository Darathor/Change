<div data-ng-controller="Rbs_User_User_ListController">
	<page-header title="{{ i18nAttr('m.rbs.user.document.user-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_User_User" filter-query="query" text-search="textSearch"></search-filters>
	<div>
		<a href="Rbs/User/User/new">{{ i18n('m.rbs.user.document.user-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLUser1"
	               publishable="true"
	               model="Rbs_User_User"
	               modification-date="false"
	               filter-query="query">
		<quick-actions>
			[action default] ||
			<a href="(= doc | documentURL : 'applications' =)">{{ i18nAttr('m.rbs.user.admin.applications') }}</a>
		</quick-actions>
		<column name="pseudonym" primary="true"></column>
		<column name="login"></column>
		<column name="email"></column>
	</rbs-document-list>
</div>