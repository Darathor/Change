<div>

	<rbs-workspace-config menu="Rbs_User">
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_User'|rbsURL:'home' =)">Utilisateurs</location>
			<location href="(= 'Rbs_User_User'|rbsURL:'list' =)">Utilisateurs</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<page-header title="{{ i18nAttr('m.rbs.user.document.user-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_User_User" filter-query="query" text-search="textSearch"></search-filters>
	<div>
		<a href ng-href="(= 'Rbs_User_User' | documentURL:'new' =)">{{ i18n('m.rbs.user.document.user-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLUser1"
	               activable="true"
	               model="Rbs_User_User"
	               modification-date="false"
	               filter-query="query">
		<quick-actions>
			[action default] ||
			<a href="(= doc | documentURL : 'applications' =)">{{ i18nAttr('m.rbs.user.admin.applications') }}</a> ||
			<a href="(= doc | documentURL : 'permission' =)">{{ i18nAttr('m.rbs.user.admin.permission') }}</a>
		</quick-actions>
		<column name="pseudonym" primary="true"></column>
		<column name="login"></column>
		<column name="email"></column>
	</rbs-document-list>

</div>