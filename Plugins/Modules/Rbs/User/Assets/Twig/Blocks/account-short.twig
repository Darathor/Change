<script type="text/ng-template" id="/accountShort.tpl">
	<div class="dropdown" data-ng-show="userNowConnected">
		<a href="#" data-toggle="dropdown" class="dropdown-toggle">
			<i class="glyphicon glyphicon-user"></i> {{ i18n('m.rbs.user.front.my_account', ['ucf']) }} <b class="caret"></b>
		</a>
		<ul class="dropdown-menu" data-ng-show="accessorId">
			<li><a href="#">(= accessorName =)</a></li>
			{% if rootMenuEntry and rootMenuEntry.hasChild %}
				<li class="divider"></li>
				{%- for child in rootMenuEntry.children -%}
					{% spaceless %}
						<li{% if child.isInPath or child.isCurrent %} class="active"{% endif %}>
							<a href="{{ child.url }}">{{ child.title }}</a>
						</li>
					{% endspaceless %}
				{%- endfor -%}
			{% endif %}
			<li class="divider"></li>
			<li><a href="Action/Rbs/User/Logout?redirectLocation={{ currentURL()|url_encode }}">{{ i18n('m.rbs.user.front.log_out', ['ucf']) }}</a></li>
		</ul>
		<ul class="dropdown-menu" data-ng-show="!accessorId">
			<li><a href="{{ functionURL('Rbs_User_Login') }}">{{ i18n('m.rbs.user.front.please_log_in', ['ucf']) }}</a></li>
			<li><a href="{{ functionURL('Rbs_User_CreateAccount') }}">{{ i18n('m.rbs.user.front.create_your_account', ['ucf']) }}</a></li>
		</ul>
	</div>
	<div data-ng-show="!userNowConnected" data-ng-transclude=""></div>
</script>
<div data-rbs-user-short-account="">
	<div class="dropdown">
		<a href="#" data-toggle="dropdown" class="dropdown-toggle">
			<i class="glyphicon glyphicon-user"></i> {{ i18n('m.rbs.user.front.my_account', ['ucf']) }} <b class="caret"></b>
		</a>
		{% if parameters.accessorId != null %}
			<ul class="dropdown-menu">
				<li><a href="#">{{ parameters.accessorName }}</a></li>
				{% if rootMenuEntry and rootMenuEntry.hasChild %}
					<li class="divider"></li>
					{%- for child in rootMenuEntry.children -%}
						{% spaceless %}
							<li{% if child.isInPath or child.isCurrent %} class="active"{% endif %}>
								<a href="{{ child.url }}">{{ child.title }}</a>
							</li>
						{% endspaceless %}
					{%- endfor -%}
				{% endif %}
				<li class="divider"></li>
				<li><a href="Action/Rbs/User/Logout?redirectLocation={{ currentURL()|url_encode }}">{{ i18n('m.rbs.user.front.log_out', ['ucf']) }}</a></li>
			</ul>
		{% else %}
			<ul class="dropdown-menu">
				<li><a href="{{ functionURL('Rbs_User_Login') }}">{{ i18n('m.rbs.user.front.please_log_in', ['ucf']) }}</a></li>
				<li><a href="{{ functionURL('Rbs_User_CreateAccount') }}">{{ i18n('m.rbs.user.front.create_your_account', ['ucf']) }}</a></li>
			</ul>
		{% endif %}
	</div>
</div>