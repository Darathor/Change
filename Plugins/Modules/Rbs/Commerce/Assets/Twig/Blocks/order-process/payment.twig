<div class="panel panel-default">
	<div class="panel-heading">{{ i18n('m.rbs.commerce.front.coupon_code', ['ucf']) }}</div>
	<div class="panel-body form-horizontal">
		<div class="form-group no-bottom-margin" data-ng-if="!payment.couponCode">
			<label for="codeCoupon" class="col-sm-6 col-md-4 control-label">
				{{ i18n('m.rbs.commerce.front.type_code', ['ucf']) }}
			</label>
			<div class="col-sm-6 col-md-8">
				<div class="input-group">
					<input type="text" class="form-control" data-ng-model="payment.newCouponCode" />
					<span class="input-group-btn">
						<button class="btn btn-primary" type="button" data-ng-click="setCoupon()">
							{{ i18n('m.rbs.commerce.front.ok', ['ucf']) }}
						</button>
					</span>
				</div>
			</div>
		</div>
		<div class="form-group no-bottom-margin" data-ng-if="payment.couponCode">
			<label for="codeCoupon" class="col-sm-6 col-md-4 control-label">
				{{ i18n('m.rbs.commerce.front.used_coupon_code', ['ucf']) }}
			</label>
			<div class="col-sm-6 col-md-8">
				<p class="form-control-static">
					(= payment.couponCode =)
					<button class="btn btn-default btn-xs" data-ng-click="removeCoupon()">
						{{ i18n('m.rbs.commerce.front.remove', ['ucf']) }}
					</button>
				</p>
			</div>
		</div>
	</div>
</div>

