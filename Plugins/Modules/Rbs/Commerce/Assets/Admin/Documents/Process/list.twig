<div class="row">

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<rbs-page-header title="{{ i18nAttr('m.rbs.commerce.admin.process_list', ['ucf']) }}"></rbs-page-header>
		<rbs-document-filter-panel open-by-default="false" model="Rbs_Commerce_Process" filter="filter">
		</rbs-document-filter-panel>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Commerce_Process' | rbsURL:'new' =)">{{ i18n('m.rbs.commerce.admin.process_create', ['ucf']) }}</a>
		</div>

		<rbs-document-list data-dlid="DLRbsCommerceProcess" model="Rbs_Commerce_Process" filter-collection="filter"
			activable="true">
			<rbs-column name="label" primary="true"></rbs-column>
			<rbs-preview style="min-height: 200px">
				<div style="margin-left: 290px;">
					<h4>(= doc.label =)</h4>
					<dl class="dl-horizontal">
						<dt>{{ i18n('m.rbs.tag.admin.tags', ['ucf','lbl']) }}</dt>
						<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
						<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.admin.no_tags', ['ucf']) }}</dd>
					</dl>
				</div>
			</rbs-preview>
		</rbs-document-list>
	</div>
</div>