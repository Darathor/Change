<div class="row">

	<rbs-workspace-config>
		<rbs-breadcrumb-config>
			<location href="(= 'Rbs_Event'|rbsURL:'home' =)">{{ i18n('m.rbs.event.admin.module_name', ['ucf']) }}</location>
			<location href="(= 'Rbs_Event_News'|rbsURL:'list' =)">{{ i18nAttr('m.rbs.event.admin.news_list', ['ucf']) }}</location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-list></rbs-default-asides-for-list>
	</div>

	<div rbs-main-column>
		<page-header title="{{ i18nAttr('m.rbs.event.admin.news_list', ['ucf']) }}"></page-header>
		<search-filters model="Rbs_Event_News" filter-query="query" text-search="textSearch"></search-filters>

		<div class="add-elements-bar">
			<a href ng-href="(= 'Rbs_Event_News' | documentURL:'new' =)">
				{{ i18n('m.rbs.event.admin.news_create', ['ucf']) }}
			</a>
		</div>

		<rbs-document-list data-dlid="DLCollection1" model="Rbs_Event_News" filter-query="query" publishable="true">
			<column name="label" primary="true"></column>
			<column name="date">(= doc.date|rbsDateTime =)</column>
		</rbs-document-list>
	</div>

</div>