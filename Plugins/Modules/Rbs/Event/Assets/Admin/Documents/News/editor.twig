<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

		<rbs-field-text property="label" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="title" required="true" rbs-sync-value="document.label"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'title'), ['ucf']) }}"
			sync-title="{{ i18nAttr('m.rbs.generic.admin.synchronize_title_label', ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-date property="date" label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'date'), ['ucf']) }}">
		</rbs-field-date>

		<hr />

		<rbs-field-rich-text property="summary" required="false" profile="Website"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'summary'), ['ucf']) }}">
		</rbs-field-rich-text>

		<rbs-field-rich-text property="text" required="false" profile="Website"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'text'), ['ucf']) }}">
		</rbs-field-rich-text>

		<hr />

		<rbs-field-picker property="detailVisual" label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'detailVisual'), ['ucf']) }}"
			accepted-model="Rbs_Media_Image" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.admin.baseevent_detailvisual_picker_title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.event.admin.baseevent_detailvisual_help', ['ucf']) }}</span>
		</rbs-field-picker>

		<rbs-field-picker property="listVisual" label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'listVisual'), ['ucf']) }}"
			accepted-model="Rbs_Media_Image" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.admin.baseevent_listvisual_picker_title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.event.admin.baseevent_listvisual_help', ['ucf']) }}</span>
		</rbs-field-picker>

		<hr />

		<rbs-field-picker-multiple property="categories"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'categories'), ['ucf']) }}"
			accepted-model="Rbs_Event_Category" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.admin.baseevent_categories_picker_title', ['ucf']) }}">
		</rbs-field-picker-multiple>
	</fieldset>

	<fieldset data-ng-show="section=='publication'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.publication_properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

		<rbs-field-picker-multiple property="publicationSections"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'publicationSections'), ['ucf']) }}"
			accepted-model="Rbs_Website_Section" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.generic.admin.publicationsections_picker_title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.generic.admin.publicationsections_help', ['ucf']) }}</span>
		</rbs-field-picker-multiple>

		<rbs-field-date property="startPublication"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'startPublication'), ['ucf']) }}">
		</rbs-field-date>

		<rbs-field-date property="endPublication"
			label="{{ i18nAttr(propertyKey('Rbs_Event_News', 'endPublication'), ['ucf']) }}">
		</rbs-field-date>
	</fieldset>

	<fieldset data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.adminjs.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<rbs-form-button-bar></rbs-form-button-bar>
</form>