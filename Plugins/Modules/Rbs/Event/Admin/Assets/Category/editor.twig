<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text property="label" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Event_Category', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="title" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Event_Category', 'title'), ['ucf']) }}"
			rbs-sync-value="document.label"
			sync-title="{{ i18nAttr('m.rbs.event.documents.category.synchronize-title-label', ['ucf']) }}">
		</rbs-field-text>

		<hr />

		<rbs-field-rich-text property="description" required="false" profile="Website"
			label="{{ i18nAttr(propertyKey('Rbs_Event_Category', 'description'), ['ucf']) }}">
		</rbs-field-rich-text>
	</fieldset>

	<fieldset data-ng-show="section=='publication'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.publication-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-picker-multiple property="publicationSections"
			label="{{ i18nAttr(propertyKey('Rbs_Event_Category', 'publicationSections'), ['ucf']) }}"
			accepted-model="Rbs_Website_Section" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.documents.category.publicationsections-picker-title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.event.documents.category.publicationsections-help', ['ucf']) }}</span>
		</rbs-field-picker-multiple>

		<rbs-field-date property="startPublication"
			label="{{ i18nAttr(propertyKey('Rbs_Event_Category', 'startPublication'), ['ucf']) }}">
		</rbs-field-date>

		<rbs-field-date property="endPublication"
			label="{{ i18nAttr(propertyKey('Rbs_Event_Category', 'endPublication'), ['ucf']) }}">
		</rbs-field-date>
	</fieldset>

	<fieldset data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<fieldset ng-show="section=='timeline'"
		data-form-section-label="{{ i18nAttr('m.rbs.timeline.admin.message-list', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.Information', ['ucf']) }}"
		rbs-timeline>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>