<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text property="label" required="true" input-class="input-block-level"
			label="{{ i18nAttr('m.rbs.event.documents.event.label', ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="title" required="true" input-class="input-block-level"
			label="{{ i18nAttr('m.rbs.event.documents.event.title', ['ucf']) }}"
			rbs-sync-value="document.label"
			sync-title="{{ i18nAttr('m.rbs.event.documents.event.synchronize-title-label', ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-date property="date" required="true"
			label="{{ i18nAttr('m.rbs.event.documents.event.date', ['ucf']) }}">
		</rbs-field-date>

		<rbs-field-date property="endDate"
			label="{{ i18nAttr('m.rbs.event.documents.event.enddate', ['ucf']) }}">
		</rbs-field-date>

		<hr />

		<rbs-field-rich-text property="summary" required="false" input-class="input-block-level" profile="Website"
			label="{{ i18nAttr('m.rbs.event.documents.event.summary', ['ucf']) }}">
		</rbs-field-rich-text>

		<rbs-field-rich-text property="text" required="false" input-class="input-block-level" profile="Website"
			label="{{ i18nAttr('m.rbs.event.documents.event.text', ['ucf']) }}">
		</rbs-field-rich-text>

		<hr />

		<rbs-field-picker property="detailVisual" label="{{ i18nAttr('m.rbs.event.documents.event.detailvisual', ['ucf']) }}"
			accepted-model="Rbs_Media_Image" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.documents.event.detailvisual-picker-title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.event.documents.event.detailvisual-help', ['ucf']) }}</span>
		</rbs-field-picker>

		<rbs-field-picker property="listVisual" label="{{ i18nAttr('m.rbs.event.documents.event.listvisual', ['ucf']) }}"
			accepted-model="Rbs_Media_Image" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.documents.event.listvisual-picker-title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.event.documents.event.listvisual-help', ['ucf']) }}</span>
		</rbs-field-picker>

		<hr />

		<rbs-field-picker-multiple property="categories"
			label="{{ i18nAttr('m.rbs.event.documents.event.categories', ['ucf']) }}"
			accepted-model="Rbs_Event_Category" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.documents.event.categories-picker-title', ['ucf']) }}">
		</rbs-field-picker-multiple>
	</fieldset>

	<fieldset data-ng-show="section=='publication'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.publication-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-picker-multiple property="publicationSections"
			label="{{ i18nAttr('m.rbs.event.documents.event.publicationsections', ['ucf']) }}"
			accepted-model="Rbs_Website_Section" allow-creation="true" allow-edition="true"
			selector-title="{{ i18nAttr('m.rbs.event.documents.event.publicationsections-picker-title', ['ucf']) }}">
			<span class="help-block">{{ i18n('m.rbs.event.documents.event.publicationsections-help', ['ucf']) }}</span>
		</rbs-field-picker-multiple>

		<rbs-field-date property="startPublication"
			label="{{ i18nAttr('m.rbs.catalog.documents.product.startPublication', ['ucf']) }}">
		</rbs-field-date>

		<rbs-field-date property="endPublication"
			label="{{ i18nAttr('m.rbs.catalog.documents.product.endPublication', ['ucf']) }}">
		</rbs-field-date>
	</fieldset>

	<fieldset data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<fieldset ng-show="section=='timeline'"
		data-form-section-label="{{ i18nAttr('m.rbs.timeline.admin.message-list', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.Information', ['ucf']) }}"
		rbs-timeline>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>