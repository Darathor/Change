<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field property="rating" required="true" label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'rating'), ['ucf']) }}">
			<div class="form-control-static">
				<ol class="list-inline star-rating">
					<li><label title="{{ i18n('m.rbs.review.blocks.star-rating-0') }}"><input type="radio" name="rating" data-ng-model="document.rating" value="0" class="sr-only" /><span class="glyphicon glyphicon-star-empty"></span></label></li> |
					<li data-ng-class="{'selected': document.rating > 0}"><label title="{{ i18n('m.rbs.review.blocks.star-rating-1') }}"><input type="radio" name="rating" data-ng-model="document.rating" value="20" class="sr-only"/><span class="glyphicon glyphicon-star"></span></label></li>
					<li data-ng-class="{'selected': document.rating > 20}"><label title="{{ i18n('m.rbs.review.blocks.star-rating-2') }}"><input type="radio" name="rating" data-ng-model="document.rating" value="40" class="sr-only"/><span class="glyphicon glyphicon-star"></span></label></li>
					<li data-ng-class="{'selected': document.rating > 40}"><label title="{{ i18n('m.rbs.review.blocks.star-rating-3') }}"><input type="radio" name="rating" data-ng-model="document.rating" value="60" class="sr-only"/><span class="glyphicon glyphicon-star"></span></label></li>
					<li data-ng-class="{'selected': document.rating > 60}"><label title="{{ i18n('m.rbs.review.blocks.star-rating-4') }}"><input type="radio" name="rating" data-ng-model="document.rating" value="80" class="sr-only"/><span class="glyphicon glyphicon-star"></span></label></li>
					<li data-ng-class="{'selected': document.rating > 80}"><label title="{{ i18n('m.rbs.review.blocks.star-rating-5') }}"><input type="radio" name="rating" data-ng-model="document.rating" value="100" class="sr-only"/><span class="glyphicon glyphicon-star"></span></label></li>
				</ol>
				<span>(= document.rating * (5/100) =)/5</span>
			</div>
		</rbs-field>

		<rbs-field-rich-text property="content" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'content'), ['ucf']) }}">
		</rbs-field-rich-text>

		<rbs-field-text property="pseudonym" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'pseudonym'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-picker property="target" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'target'), ['ucf']) }}"
			selector-title="{{ i18nAttr('m.rbs.review.documents.review.select-target', ['ucf']) }}">
		</rbs-field-picker>

		<rbs-field-picker property="section" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'section'), ['ucf']) }}"
			accepted-model="Rbs_Website_Section"
			selector-title="{{ i18nAttr('m.rbs.review.documents.review.select-section', ['ucf']) }}">
		</rbs-field-picker>

		<rbs-field-date property="reviewDate" required="true"
			label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'reviewDate'), ['ucf']) }}">
		</rbs-field-date>

		<rbs-field-boolean property="promoted"
			label="{{ i18nAttr(propertyKey('Rbs_Review_Review', 'promoted'), ['ucf']) }}">
		</rbs-field-boolean>

	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>