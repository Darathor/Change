<h2>{{ i18n('m.rbs.review.blocks.review-detail', ['ucf']) }}</h2>
{% if parameters.editionMode %}{# display the edition form if user is authenticated and he is the review author #}
	{% if review.promoted %}
		<p>{{ i18n('m.rbs.review.blocks.review-detail-promoted', ['ucf']) }}</p>
	{% endif %}
	{% if review.pendingValidation %}
		<p>{{ i18n('m.rbs.review.blocks.pending-publication', ['ucf']) }}</p>
	{% endif %}
	<form method="post" id="Review" action="Action/Rbs/Review/UpdateReview" class="well well-small">
		<input type="hidden" name="reviewId" value="{{ review.id }}">
		<input type="hidden" name="redirectLocation" value="{{ currentURL() }}" />
		<fieldset>
			<div class="form-group">
				<label for="rbs-review-review-pseudonym">{{ i18n('m.rbs.review.blocks.review-post-pseudonym', ['ucf']) }}</label>
				<p id="rbs-review-review-pseudonym" class="form-control-static">{{ review.pseudonym }}</p>
			</div>
			<!-- TODO do something better with jQuery/AngularJS/Bootstrap-UI -->
			<div class="form-group">
				<label for="rbs-review-review-rating-value">{{ i18n('m.rbs.review.blocks.review-post-rating', ['ucf']) }}</label>
				<input id="rbs-review-review-rating-value" type="range" name="rating" min="0" max="100" value="{{ review.rating }}">
				<span id="rbs-review-review-rating">{{ review.rating }}/100</span>
			</div>
			<div class="form-group">
				<label for="rbs-review-review-content">{{ i18n('m.rbs.review.blocks.review-post-content', ['ucf']) }}</label>
				<input id="rbs-review-review-content" type="text" name="content" class="form-control" value="{{ review.content | raw }}">
			</div>
			<button class="btn btn-primary" type="submit">{{ i18n('m.rbs.review.blocks.review-post-submit', ['ucf']) }}</button>
		</fieldset>
	</form>
	<script type="text/javascript">
		window.onload =  function(){
			$('#rbs-review-review-rating-value').change(function (){
				$('#rbs-review-review-rating').html($(this).val() + '/100');
			});
		};
	</script>
{% else %}{# display the review like in the list (with more details) #}
	{% include 'Rbs_Review/Blocks/review.twig' with { 'review': review } %}
{% endif %}