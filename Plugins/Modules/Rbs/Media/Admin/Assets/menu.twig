<div class="panel panel-default" ng-controller="Rbs_Media_Menu_Controller">

	<div class="panel-heading">
		<h3 class="panel-title"><i class="icon-search"></i> {{ i18n('m.rbs.media.menu.find-images', ['ucf']) }}</h3>
	</div>

	<div class="list-group">
		<div class="list-group-item" ng-show="selectedTags.length > 0">
			<h5>
				<small class="pull-right"><a href="javascript:;" ng-click="unselectAll()">{{ i18n('m.rbs.media.menu.clear-selection', ['ucf']) }}</a></small>
				{{ i18n('m.rbs.media.menu.selected-tags', ['ucf']) }}</h5>
			<p class="text-muted" style="text-align:right;line-height:14px;margin-bottom:4px;"><small>{{ i18n('m.rbs.media.menu.selected-tags-message', ['ucf']) }} <i class="icon-arrow-right"></i></small></p>
			<p>
				<span
					ng-repeat="tag in selectedTags"
					on-remove="unselectTag(tag)"
					rbs-tag="tag"></span>
			</p>
		</div>

		<div class="list-group-item">
			<h5>{{ i18n('m.rbs.media.menu.all-tags', ['ucf']) }}</h5>
			<form class="rbs-form-simple-filter"
			      filter="filterTags"
			      on-enter="selectTag(filteredTags[0])"
			      on-tab="selectTag(filteredTags[0])"
			      on-escape="removeLastSelectedTag()"></form>
			<p>
				<span ng-repeat="tag in filteredTags"
				      ng-click="selectTag(tag)"><span class="cursor-pointer" rbs-tag="tag"></span></span>
			</p>
		</div>
	</div>

	<div class="panel-footer">
		<a href="Rbs/Tag">{{ i18n('m.rbs.media.menu.manage-tags', ['ucf']) }} <i class="icon-circle-arrow-right"></i></a>
	</div>

</div>