<div data-ng-controller="Rbs_Collection_Collection_ListController">
	<page-header title="{{ i18nAttr('m.rbs.collection.document.collection-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_Collection_Collection" filter-query="query" text-search="textSearch"></search-filters>
	<div>
		<a href="Rbs/Collection/Collection/new">{{ i18n('m.rbs.collection.document.collection-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLCollection1"
	               model="Rbs_Collection_Collection"
	               filter-query="query">
		<column name="label" primary="true">
			(= doc.label =)
		</column>
		<column name="code"></column>
	</rbs-document-list>
</div>