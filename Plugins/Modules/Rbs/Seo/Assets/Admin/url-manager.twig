<div class="row" ng-controller="RbsChangeSimpleDocumentController">

	<div rbs-aside-column>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">{{ i18n('m.rbs.admin.admin.concerned_document', ['ucf']) }}</h3>
			</div>
			<div class="panel-body">
				<rbs-document-preview document="document"></rbs-document-preview>
			</div>
		</div>
	</div>

	<div rbs-main-column>

		<div class="page-header">
			<h2>{{ i18n('m.rbs.seo.admin.urls', ['ucf']) }}</h2>
		</div>

		<p>
			<a href="(= document | rbsURL =)" class="back-to-link">
				{{ i18n('m.rbs.admin.admin.back_to_document', ['ucf'], {'label':'(= document.label =)'}) | raw }}
			</a>
		</p>

		<rbs-document-url-manager document="document"></rbs-document-url-manager>
	</div>

</div>