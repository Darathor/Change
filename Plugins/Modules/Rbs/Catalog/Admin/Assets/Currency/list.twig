<div data-ng-controller="Rbs_Catalog_Currency_ListController">
	<page-header sub-title="{{ i18nAttr('m.rbs.catalog.document.currency-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_Catalog_Currency" query="query" text-search="textSearch"></search-filters>

	<div>
		<a href="Rbs/Catalog/Currency/new">{{ i18n('m.rbs.catalog.document.currency-create', ['ucf']) }}</a>
	</div>

	<document-list data-dlid="DLRbsCatalogCurrency"
	               model="Rbs_Catalog_Currency"
	               query="query">
		<column name="label" label="{{ i18nAttr('m.rbs.catalog.document.currency.label', ['ucf']) }}" primary="true"></column>
		<column name="code" label="{{ i18nAttr('m.rbs.catalog.document.currency.code', ['ucf']) }}"></column>
		<column name="symbol" label="{{ i18nAttr('m.rbs.catalog.document.currency.symbol', ['ucf']) }}"></column>
	</document-list>
</div>