<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.properties', ['ucf']) }}">

		<rbs-field-text data-ng-hide="document.isNew()" property="label" input-class="input-block-level"
			label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field property="product"
			label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'product'), ['ucf']) }}">
			<p class="form-control-static">(= document.product.label =)</p>
		</rbs-field>

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'crossSellingType'), ['ucf']) }}" required="true">
			<rbs-collection-item-selector ng-model="document.crossSellingType" collection-code="Rbs_Catalog_Collection_CrossSellingType"></rbs-collection-item-selector>
		</rbs-field>

		<rbs-field-boolean property="symmetrical" label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'symmetrical'), ['ucf']) }}">
		</rbs-field-boolean>

		<hr />

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'productSortOrder'), ['ucf']) }}">
			<select ng-model="document.productSortOrder" id="productSortOrder" name="productSortOrder" class="form-control"
				rbs-items-from-collection="Rbs_Catalog_Collection_ProductSortOrders">
			</select>
			<span class="help-block">{{ i18n('m.rbs.catalog.documents.crosssellingproductlist.productsortorder-help') }} </span>
		</rbs-field>

		<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'productSortDirection'), ['ucf']) }}">
			<rbs-collection-item-selector ng-model="document.productSortDirection"
				collection-code="Rbs_Generic_Collection_SortDirections">
			</rbs-collection-item-selector>
			<span class="help-block">{{ i18n('m.rbs.catalog.documents.crosssellingproductlist.productsortdirection-help') }}</span>
		</rbs-field>

		<hr />

		<rbs-field-date property="startActivation"
			label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'startActivation'), ['ucf']) }}">
		</rbs-field-date>

		<rbs-field-date property="endActivation"
			label="{{ i18nAttr(propertyKey('Rbs_Catalog_CrossSellingProductList', 'endActivation'), ['ucf']) }}">
		</rbs-field-date>
	</fieldset>

	<fieldset
		data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.adminjs.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>
