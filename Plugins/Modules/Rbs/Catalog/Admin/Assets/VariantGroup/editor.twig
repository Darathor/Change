<form name="form" ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
	          data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
	          data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<div data-ng-if="document.isNew()">
			<rbs-field-picker required="true" property="rootProduct"
			                  label="{{ i18nAttr('m.rbs.catalog.documents.variantgroup.rootproduct', ['ucf']) }}"
			                  accepted-model="Rbs_Catalog_Product"
			                  selector-title="{{ i18nAttr('m.rbs.catalog.documents.variantgroup.rootproduct-picker-title', ['ucf']) }}"
			                  allow-creation="true"
			                  allow-edition="false"
			                  picker-template="picker-empty-group.twig">
			</rbs-field-picker>

			<rbs-field required="true" property="axisAttribute"
			           label="{{ i18nAttr('m.rbs.catalog.documents.variantgroup.axisattribute', ['ucf']) }}">
				<select ng-required="true" ng-model="document.axisAttribute"
				        rbs-items-from-collection="Rbs_Catalog_Collection_AttributeSet" rbs-items-collection-params="visibility:axes">
					<option value="">{{ i18n('m.rbs.catalog.documents.variantgroup.axisattribute-select', ['ucf']) }}</option>
				</select>
			</rbs-field>
		</div>

		<div class="control-group" ng-hide="document.isNew()">
			<label class="control-label">{{ i18n('m.rbs.catalog.documents.variantgroup.rootproduct', ['ucf']) }}</label>
			<div class="controls">
				<span class="uneditable-input input-xlarge">
					<a href ng-href="(= document.rootProduct | documentURL =)">(= document.rootProduct.label =)</a>
				</span>
			</div>
		</div>

		<rbs-field-boolean property="newSkuOnCreation"
		                   label="{{ i18nAttr('m.rbs.catalog.documents.variantgroup.newskuoncreation', ['ucf']) }}">
		</rbs-field-boolean>

		<div data-ng-if="! document.isNew()">
			<div rbs-tip="rbsVariantGroupEditorHelp">
				{{ i18n('m.rbs.catalog.documents.variantgroup.help-tip', ['ucf']) }}
			</div>

			<ul class="breadcrumb variant-group-editor">
				<li class="active"><span ng-bind="document.label"></span></li><li ng-repeat="item in path" class="active"><span ng-bind="item.value.title"></span></li>
			</ul>

			<div class="axes-columns-nav">

				<div class="axis-column" ng-repeat="axis in axesInfo" ng-style="getColumnWidthStyle()">

					<div class="axis-header">
						<span class="pull-right">
							<button type="button" class="btn btn-sm" ng-class="{'active': inEditMode(axis.index)}" ng-click="toggleEditMode(axis.index)">
								<i class="icon-cog"></i>
							</button>
						</span>
						<h4>
							<span ng-switch="document.axesInfo[$index].cat">
								<i ng-switch-when="false" class="icon-eye-close muted" title="Non visible dans les listes"></i>
								<i ng-switch-when="true" class="icon-eye-open" title="Visible dans les listes"></i>
							</span>
							<span ng-bind="axis.label"></span> (<span ng-bind="axis.dv.length"></span>)
						</h4>

						<div ng-form="" ng-if="inEditMode(axis.index)">
							<p>
								<label class="checkbox">
									<input type="checkbox" ng-model="document.axesInfo[axis.index].cat"/>
									{{ i18n('m.rbs.catalog.documents.variantgroup.visibility-head', ['ucf']) }}
								</label>
							</p>
							<p>{{ i18n('m.rbs.catalog.documents.variantgroup.add-axis-value', ['ucf']) }}</p>
							<p>
								<input rbs-variant-group-editor-new-axis-value-validator="" axis-index="(= axis.index =)"
								       auto-focus="" autocapitalize="off" type="text" class="input-block-level" required="required"
								       name="axisValueToAdd" ng-model="axisValueToAdd[axis.index]" ng-keypress="addValueOnEnter(axis.index, $event)"/>
							<p class="text-error" ng-show="valueAlreadyExists(axis.index)">{{ i18n('m.rbs.catalog.documents.variantgroup.value-already-exists', ['ucf']) }}</p>
							<div class="btn-toolbar">
								<button class="btn" type="button" ng-click="toggleEditMode(axis.index)">{{ i18n('m.rbs.catalog.documents.variantgroup.cancel', ['ucf']) }}</button>
								<button class="btn btn-primary" type="button" ng-disabled="isInvalid(axis.index)" ng-click="addAxisValue(axis.index)">{{ i18n('m.rbs.catalog.documents.variantgroup.add', ['ucf']) }}</button>
							</div>
							</p>
						</div>
					</div>

					<div class="axis-values">
						<div ng-repeat="value in axis.dv" class="axis-value" ng-class="{'odd': $odd, 'selected': inNavPath(axis.index, value), 'between-selection': isBetween(axis.index, $index), 'unused': (used = isVariantSelected(axis.index, value.value)) != 'Y'}" ng-click="navigate(axis.index, value, $index)">
							<span ng-switch="inEditMode(axis.index)">
								<button ng-switch-when="true" type="button" ng-click="removeAxisValue(axis.index, $index)" class="btn btn-xs btn-danger"><i class="icon-trash"></i></button>
								<span ng-switch-when="false" ng-switch="used">
									<button ng-switch-when="Y" type="button" class="btn btn-xs btn-success" ng-click="unselectVariant(axis.index, value.value, $event)"><i class="icon-minus"></i></button>
									<button ng-switch-when="N" type="button" class="btn btn-xs" ng-click="selectVariant(axis.index, value.value, $event)"><i class="icon-plus"></i></button>
									<button ng-switch-when="U" type="button" class="btn btn-xs" disabled="disabled"><i class="icon-question"></i></button>
								</span>
							</span>
							<span ng-bind="value.title"></span>
						</div>
						<div ng-if="$index > 0" class="indicator"></div>
					</div>

				</div>

				<div class="axis-column" ng-if="navigationEnd">
					<div class="axis-header">
						<h4>
							<span ng-repeat="item in path">
								<span ng-bind="item.value.title"></span>
							</span>
						</h4>
					</div>
					<div class="axis-values">
						<div class="axis-value" style="cursor: default" ng-switch="finalProductSaved()">
							<div ng-switch-when="true" ng-switch="loadingFinalProduct">
								<div ng-switch-when="true">
									<i class="icon-spinner icon-spin"></i> {{ i18n('m.rbs.catalog.documents.variantgroup.loading-product-info', ['ucf']) }}
								</div>
								<div ng-switch-when="false">
									<h4 ng-bind="finalProduct.label"></h4>
									<p class="clearfix" ng-if="finalProduct.visuals.length">
										<img ng-repeat="visual in finalProduct.visuals" rbs-storage-image="visual.id" thumbnail="XS" class="img-polaroid margin-right pull-left"/>
									</p>
									<p ng-if="! finalProduct.visuals.length">
										<em class="muted">{{ i18n('m.rbs.catalog.documents.variantgroup.no-visuals', ['ucf']) }}</em>
									</p>
									<p>
										<a href="javascript:;" ng-href="(= getFinalProductUrl() =)">{{ i18n('m.rbs.catalog.documents.variantgroup.go-to-product', ['ucf']) }} <i class="icon-circle-arrow-right"></i></a>
									</p>
								</div>
							</div>
							<div ng-switch-when="false" class="alert alert-warning">
								{{ i18n('m.rbs.catalog.documents.variantgroup.product-does-not-exist-yet') }}
							</div>
						</div>
					</div>
				</div>

			</div>

			<div class="well" style="margin-top: 20px;">
				<span class="pull-right">
					<button class="btn btn-primary" ng-click="selectAllVariants()" type="button">{{ i18n('m.rbs.catalog.documents.variantgroup.generate-all-action', ['ucf']) }}</button>
					<button class="btn btn-danger" ng-click="removeAllVariants()" type="button">{{ i18n('m.rbs.catalog.documents.variantgroup.remove-all-action', ['ucf']) }}</button>
				</span>
				<h4>
					<span ng-bind="document.productMatrixInfo | rbsVariantGroupEditorValidProductsCount"></span>
					{{ i18n('m.rbs.catalog.documents.variantgroup.existing-products-of') }}
					<span ng-bind="possibleVariantsCount"></span>
					{{ i18n('m.rbs.catalog.documents.variantgroup.possible-products') }}
				</h4>
				<p><span class="label label-info">Info</span>
					{{ i18n('m.rbs.catalog.documents.variantgroup.products-will-be-created-when-this-form-is-submitted', ['ucf']) }}
				</p>
			</div>

		</div>
	</fieldset>


	<fieldset data-ng-show="section=='product'"
	          data-form-section-label="{{ i18nAttr('m.rbs.catalog.documents.variantgroup.products-section', ['ucf']) }}"
	          data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<table class="document-list table table-condensed table-bordered table-striped table-hover token">
			<thead>
			<tr>
				<th>
					{{ i18n('m.rbs.catalog.documents.variantgroup.label', ['ucf']) }}
				</th>
				<th>
					{{ i18n('m.rbs.catalog.document.product.sku', ['ucf']) }}
				</th>
			</tr>
			</thead>
			<tbody>
			<tr data-ng-repeat="product in productList" class="normal-row">
				<td>
					<a href ng-href="(= product | documentURL =)">(= product.label =)</a>
				</td>
				<td>
					<a href data-ng-show="product.sku" ng-href="(= product.sku | documentURL =)">(= product.sku.label =)</a>
				</td>
			</tr>
			</tbody>
		</table>
	</fieldset>

	<fieldset data-ng-show="section=='systeminfo'"
	          data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
	          data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
	          data-document-system-info-section>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>