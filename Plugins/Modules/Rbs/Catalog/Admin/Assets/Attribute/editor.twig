<form ng-submit="submit()" class="form-horizontal">
	<fieldset data-ng-show="section==''"
			data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
			data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">

		<rbs-field-text property="label" required="true" input-class="input-block-level"
			label="{{ i18nAttr('m.rbs.catalog.document.attribute.label', ['ucf']) }}">
		</rbs-field-text>

		<rbs-field-text property="title" required="true" input-class="input-block-level"
			label="{{ i18nAttr('m.rbs.catalog.document.attribute.title', ['ucf']) }}">
			<div class="help-block">{{ i18n('m.rbs.catalog.document.attribute.title-help', ['ucf']) }}</div>
		</rbs-field-text>

		<rbs-field required="true" label="{{ i18nAttr('m.rbs.catalog.document.attribute.valuetype', ['ucf']) }}">
			<select ng-model="document.valueType" required="required"
				rbs-items-from-collection="Rbs_Catalog_Collection_AttributeValueTypes"></select>
		</rbs-field>

		<div data-ng-hide="document.valueType == 'Group'">
			<div data-ng-hide="document.valueType == 'Text' || document.valueType == 'Boolean'">
				<rbs-field-boolean property="requiredValue"
					label="{{ i18nAttr('m.rbs.catalog.document.attribute.requiredValue', ['ucf']) }}">
				</rbs-field-boolean>
			</div>

			<div data-ng-hide="document.valueType == 'Text' || document.valueType == 'Document' || document.valueType == 'Property'">
				<rbs-field-text property="defaultValue" input-class="input-block-level"
					label="{{ i18nAttr('m.rbs.catalog.document.attribute.defaultvalue', ['ucf']) }}">
				</rbs-field-text>
			</div>

			<div data-ng-show="document.valueType == 'Code' || document.valueType == 'Integer' || document.valueType == 'Document'">
				<rbs-field label="{{ i18nAttr('m.rbs.catalog.document.attribute.collectioncode', ['ucf']) }}">
					<select ng-model="document.collectionCode"
							rbs-items-from-collection="Rbs_Catalog_Collection_AttributeCollections">
						<option value=""></option>
					</select>
				</rbs-field>
			</div>

			<div data-ng-show="document.valueType == 'Property'">
				<rbs-field-text property="productProperty" input-class="input-block-level"
					label="{{ i18nAttr('m.rbs.catalog.document.attribute.productproperty', ['ucf']) }}">
				</rbs-field-text>
			</div>

			<div data-ng-show="document.valueType == 'Text'">
				<rbs-field-boolean property="localizedValue"
					label="{{ i18nAttr('m.rbs.catalog.document.attribute.localizedvalue', ['ucf']) }}">
				</rbs-field-boolean>
			</div>
		</div>

		<div data-ng-show="document.valueType == 'Group'">
			<rbs-field-picker-multiple property="attributes" accepted-model="Rbs_Catalog_Attribute" allow-creation="true"
				label="{{ i18nAttr('m.rbs.catalog.document.attribute.attributes', ['ucf']) }}"
				selector-title="{{ i18nAttr('m.rbs.catalog.admin.js.attribute-picker-title', ['ucf']) }}">
			</rbs-field-picker-multiple>
		</div>
	</fieldset>

	<fieldset
			data-ng-show="section=='systeminfo'"
			data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
			data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
			data-document-system-info-section="">
	</fieldset>

	<form-button-bar></form-button-bar>
</form>