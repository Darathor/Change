<div ng-controller="rbsProductCategorizableSelector">
	<rbs-document-list data-dlid="DLDocumentProductCategorizableSelector"
				   model="{{ query.model }}" load-query="productCategorizableQuery"
				   filter-query="query" extend="picker" actions="">
		<column name="visuals" thumbnail="XS" thumbnail-path="doc.adminthumbnail"
				label="{{ i18nAttr('m.rbs.catalog.documents.product.visual', ['ucf']) }}"></column>
		<column name="label" primary="true">
			{% if (query.multiple) %}
			<span class="pull-right">
				<!--TODO localization-->
				<button type="button" class="btn btn-xs" ng-click="extend.replaceWithDocument(doc)"><i class="icon-arrow-right"
							title="{{ i18nAttr('m.rbs.admin.admin.replace_by_this', ['ucf']) }}"></i></button>
			</span>
			{% endif %}
			<a href="javascript:;" ng-click="extend.selectDocument(doc)">(=doc.label=)</a>
		</column>
		<column name="sku" sort="sku.code">(= doc.sku.code =)</column>
	</rbs-document-list>
</div>
