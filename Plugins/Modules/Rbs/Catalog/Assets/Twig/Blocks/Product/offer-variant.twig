{% if parameters.webStoreId %}
	<script type="text/ng-template" id="/addLineToCart.tpl">
		<div data-ng-show="product.hasOwnSku && !productLoading">
			<div class="form-group" data-ng-show="product.canBeOrdered">
				<label for="product-quantity">{{ i18n('m.rbs.commerce.front.quantity', ['ucf']) }}</label>
				<input data-ng-show="stock.maxQuantity" class="form-control" type="number" name="quantity" data-ng-model="quantity"
					max="(= stock.maxQuantity =)"
					min="(= stock.minQuantity =)"
					step="(= stock.quantityIncrement =)"/>
				<input data-ng-show="!stock.maxQuantity" class="form-control" type="number" name="quantity" data-ng-model="quantity"
					min="(= stock.minQuantity =)"
					step="(= stock.quantityIncrement =)"/>
			</div>
			<button name="key" type="button" class="btn btn-primary btn-lg" data-ng-click="addLine()" data-ng-disabled="!product.canBeOrdered">
				<span data-ng-show="product.canBeOrdered"><i class="glyphicon glyphicon-shopping-cart"></i> {{ i18n('m.rbs.commerce.front.add_to_cart', ['ucf']) }}</span>
				<span data-ng-hide="product.canBeOrdered">{{ i18n('m.rbs.commerce.front.not_available', ['ucf']) }}</span>
			</button>
		</div>
	</script>

	<script type="text/ng-template" id="/productAvailability.tpl">
		<div data-ng-show="stock && !productLoading" class="alert availability text-center" data-ng-class="stock.thresholdClass" data-ng-show="stock.thresholdTitle">
			<h4 itemprop="availability">(= stock.thresholdTitle =)</h4>
		</div>
		<div data-ng-show="!stock && !productLoading" ng-transclude></div>
	</script>

	<script type="text/ng-template" id="/productPrice.tpl">
		<div data-ng-show="prices && !productLoading">
			<meta itemprop="priceCurrency" content="(= prices.currencyCode =)" data-ng-show="prices.price" />
			<ul class="list-unstyled main-price" data-ng-show="prices.price">
				<li class="price" data-ng-show="pricesConfig.display">
					<span data-ng-if="!(pricesConfig.displayWithTax && prices.priceWithTax)"><span itemprop="price">(= prices.formattedPrice =)</span></span>
					<span data-ng-if="pricesConfig.displayWithTax && prices.priceWithTax">(= prices.formattedPrice =)</span>
					<abbr class="tax-mode" title="{{ i18nAttr('m.rbs.catalog.front.without_tax') }}">{{ i18n('m.rbs.catalog.front.without_tax_abbr') }}</abbr>
					<del title="{{ i18nAttr('m.rbs.catalog.front.old_price') }}" data-ng-show="prices.priceWithoutDiscount">(= prices.formattedPriceWithoutDiscount =)</del>
				</li>
				<li class="price" data-ng-show="pricesConfig.displayWithTax && prices.priceWithTax">
					<span itemprop="price">(= prices.formattedPriceWithTax =)</span>
					<abbr class="tax-mode" title="{{ i18nAttr('m.rbs.catalog.front.with_tax') }}">{{ i18n('m.rbs.catalog.front.with_tax_abbr') }}</abbr>
					<del title="{{ i18nAttr('m.rbs.catalog.front.old_price') }}" data-ng-show="prices.priceWithoutDiscountWithTax">(= prices.formattedPriceWithoutDiscountWithTax =)</del>
				</li>
				<li class="small" data-ng-show="prices.ecoTax">
					{{ i18n('m.rbs.catalog.front.including', ['ucf']) }} {{ i18n('m.rbs.catalog.front.ecotax') }} (= prices.formattedEcoTax =)
				</li>
			</ul>
		</div>
		<div data-ng-show="!prices && !productLoading" ng-transclude></div>
	</script>

	<div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
		{% block variants %}
			<div rbs-catalog-variant-data=""
					data-variant-group-id="{{ productPresentation.variantsConfiguration.variantGroup.id }}"
					data-axes="{{ productPresentation.variantsConfiguration.axes | json_encode }}">
			</div>
			<div class="form-group">
				{% for axisName in productPresentation.variantsConfiguration.axesNames %}
					{% set i = loop.index0 %}
					<label for="selectedVariant{{ i }}">{{ axisName }}</label>
					<select id="selectedVariant{{ i }}" {%if i > 0 %} ng-disabled="!selectedAxesValues[{{ i - 1}}]" {%endif%} ng-model="selectedAxesValues[{{ i }}]" ng-options="var.title for var in axesValues[{{ i }}]"
						ng-change="variantChanged({{ i }})" class="form-control">
					</select>
				{% endfor %}
			</div>
		{% endblock%}

		{% block availability %}
			<div rbs-catalog-product-availability="">
				{% if productPresentation.stock.thresholdTitle %}
					<div class="alert availability text-center {{ productPresentation.stock.thresholdClass }}">
						<h4 itemprop="availability">{{ productPresentation.stock.thresholdTitle }}</h4>
					</div>
				{% endif %}
			</div>
		{% endblock %}

		{% block prices %}
			<div rbs-catalog-product-price="" data-ng-model="pricesConfig"
					data-display="{{ parameters.displayPrices }}"
					data-display-with-tax="{{ parameters.displayPricesWithTax }}">
					<div>
					{% if productPresentation.prices.price and (parameters.displayPrices or parameters.displayPricesWithTax) %}
						{% set prices = productPresentation.prices %}
						{% if prices.currencyCode %}<meta itemprop="priceCurrency" content="{{ prices.currencyCode }}" />{% endif %}
						<ul class="list-unstyled main-price">
							{% if parameters.displayPrices and prices.price %}
								<li class="price">
									{% if not productPresentation.general.hasOwnSku %}{{ i18n('m.rbs.catalog.front.from') }}{% endif %}
									{% if not (parameters.displayPricesWithTax and prices.priceWithTax) %}
										<span itemprop="price">{{ prices.formattedPrice }}</span>
									{% else %}
										{{ prices.formattedPrice }}
									{% endif %}
									<abbr class="tax-mode" title="{{ i18nAttr('m.rbs.catalog.front.without_tax') }}">{{ i18n('m.rbs.catalog.front.without_tax_abbr') }}</abbr>
									{% if prices.priceWithoutDiscount %}
										<del title="{{ i18nAttr('m.rbs.catalog.front.old_price') }}">{{ prices.formattedPriceWithoutDiscount }}	</del>
									{% endif %}
								</li>
							{% endif %}
							{% if parameters.displayPricesWithTax  and prices.priceWithTax %}
								<li class="price">
									{% if not productPresentation.general.hasOwnSku %}{{ i18n('m.rbs.catalog.front.from') }}{% endif %}
									<span itemprop="price">{{ prices.formattedPriceWithTax }}</span>
									<abbr class="tax-mode" title="{{ i18nAttr('m.rbs.catalog.front.with_tax') }}">{{ i18n('m.rbs.catalog.front.with_tax_abbr') }}</abbr>
									{% if prices.priceWithoutDiscountWithTax %}
										<del title="{{ i18nAttr('m.rbs.catalog.front.old_price') }}">{{ prices.formattedPriceWithoutDiscountWithTax }}</del>
									{% endif %}
								</li>
							{% endif %}
							{% if prices.ecoTax %}
								<li class="small">
									{{ i18n('m.rbs.catalog.front.including', ['ucf']) }} {{ i18n('m.rbs.catalog.front.ecotax') }} {{ prices.formattedEcoTax }}
								</li>
							{% endif %}
						</ul>
					{% endif %}
					</div>
			</div>
		{% endblock %}

		<form action="{{ ajaxURL('Rbs_Commerce', 'AddLineToCart') }}" method="POST" name="addLineToCart">
			<div rbs-catalog-product-data=""
				data-product-id="{{ parameters.toDisplayDocumentId }}"
				data-product-designation="{{ productPresentation.general.title }}"
				data-redirect-url="{{ currentURL() }}">

				<input type="hidden" name="redirectLocation" value="{{ currentURL() }}">
				<fieldset>
					{% if productPresentation.general.hasOwnSku %}
						{% if productPresentation.general.canBeOrdered %}
							<div class="form-group">
								<label for="product-quantity">{{ i18n('m.rbs.commerce.front.quantity', ['ucf']) }}</label>
								<input class="form-control" type="number" id="product-quantity" name="quantity"
									value="{{ productPresentation.stock.minQuantity }}"
									max="{{ productPresentation.stock.maxQuantity }}"
									min="{{ productPresentation.stock.minQuantity }}"
									step="{{ productPresentation.stock.quantityIncrement }}" />
							</div>
						{% endif %}

						<button type="submit" class="btn btn-primary btn-lg" {% if not productPresentation.general.canBeOrdered %} disabled="true" {% endif %}>
							{% if productPresentation.general.canBeOrdered %}
								<i class="glyphicon glyphicon-shopping-cart"></i> {{ i18n('m.rbs.commerce.front.add_to_cart', ['ucf']) }}
							{% else %}
								{{ i18n('m.rbs.commerce.front.not_available', ['ucf']) }}
							{% endif %}
						</button>
					{% endif %}
				</fieldset>

			</div>
		</form>
	</div>
{% endif %}