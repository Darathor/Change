<li>
	<ul class="grid-list-cell" data-ng-controller="RbsCatalogProductController">
		<li class="product-visual">
			<a title="{{ i18nAttr('m.rbs.catalog.front.view_product_details', ['ucf'], {product: row.title}) }}"
				href="{{ row.url }}">
				<img alt="" src="{{ catalogMacros.listThumbnailURL(row.visual) }}" /></a>
			<div class="pictograms-container">
			</div>
		</li>
		<li class="product-label">
			<a title="{{ i18nAttr('m.rbs.catalog.front.view_product_details', ['ucf'], {product: row.title}) }}"
				href="{{ row.url }}">{{ row.title }}</a>
		</li>
		<li class="product-availability">
			{{ row.productPresentation.stock.thresholdTitle }}
		</li>
		{% if parameters.webStoreId %}
			{% block prices %}
				{% if row.productPresentation.prices.price %}
					{% if parameters.displayPrices  %}
						<li class="product-price price">
							{% if row.productPresentation.general.hasVariants  %}{{ i18n('m.rbs.catalog.front.from') }}{% endif %}
							{{ formatPrice(row.productPresentation.prices.price) }}
							<abbr class="tax-mode" title="{{ i18nAttr('m.rbs.catalog.front.without_tax') }}">{{ i18n('m.rbs.catalog.front.without_tax_abbr') }}</abbr>
							{% if row.productPresentation.prices.priceWithoutDiscount %}
								<del title="{{ i18nAttr('m.rbs.catalog.front.old_price') }}">
									{{- formatPrice(row.productPresentation.prices.priceWithoutDiscount) -}}
								</del>
							{% endif %}
						</li>
					{% endif %}
					{% if parameters.displayPricesWithTax %}
						<li class="product-price price">
							{% if row.productPresentation.general.hasVariants  %}{{ i18n('m.rbs.catalog.front.from') }}{% endif %}
							{{ formatPrice(row.productPresentation.prices.priceWithTax) }}
							<abbr class="tax-mode" title="{{ i18nAttr('m.rbs.catalog.front.with_tax') }}">{{ i18n('m.rbs.catalog.front.with_tax_abbr') }}</abbr>
							{% if row.productPresentation.prices.priceWithoutDiscountWithTax %}
								<del title="{{ i18nAttr('m.rbs.catalog.front.old_price') }}">
									{{- formatPrice(row.productPresentation.prices.priceWithoutDiscountWithTax) -}}
								</del>
							{% endif %}
						</li>
					{% endif %}
				{% endif %}
			{% endblock %}

			{% block addToCart %}
				<li class="product-add">
					{% if not row.productPresentation.general.hasVariants  %}
						<div rbs-catalog-product-data="" data-ng-model="productConfig"
							data-key="{{ row.id }}"
							data-product-id="{{ row.id }}"
							data-has-variants="{{ row.productPresentation.general.hasVariants }}"
							data-sku="{{ row.productPresentation.stock.sku }}"
							data-price="{{ row.productPresentation.prices.price }}"
							data-redirect-url="{{ parameters.redirectUrl }}"
							data-designation="{{ row.productPresentation.general.designation }}"
							data-stock-level ="{{ row.productPresentation.stock.level }}"
							data-stock-min ="{{ row.productPresentation.stock.minQuantity }}"
							data-stock-max ="{{ row.productPresentation.stock.maxQuantity }}"
							data-stock-step ="{{ row.productPresentation.stock.quantityIncrement }}" ></div>
					{% else %}
						<div class="ng-valid ng-dirty">
							<a class="btn btn-primary btn-sm" title="{{ i18nAttr('m.rbs.catalog.front.view_product_details', ['ucf'], {product: row.productPresentation.general.title}) }}"
								href="{{ row.url }}">{{ i18n('m.rbs.catalog.front.view_product_details', ['ucf'], {product: row.productPresentation.general.title}) }}</a>
						</div>
					{% endif %}
				</li>
			{% endblock %}

		{% endif %}
	</ul>
</li>