<div class="row" data-ng-controller="Rbs_Catalog_Product_CrossSellingController">
	<div class="col-md-12">
		<div class="page-header">
			<h2>{{ i18n('m.rbs.catalog.admin.product_cross_selling_list', ['ucf']) }}</h2>
		</div>
	</div>

	<div data-rbs-aside-column="">
		<div class="rbs-aside-block">
			<h3 class="panel-title">{{ i18n('m.rbs.catalog.admin.product_concerned_product', ['ucf']) }}</h3>
			<rbs-document-preview document="product"></rbs-document-preview>
			<p>
				<a href="(= product | rbsURL =)" class="back-to-link">
					{{ i18n('m.rbs.catalog.admin.product_back_to_product', ['ucf']) }}
					<strong>(= product.label =)</strong>
				</a>
			</p>
		</div>
	</div>

	<div data-rbs-main-column="">
		<div class="add-elements-bar">
			<a href="(= 'Rbs_Catalog_CrossSellingProductList' | rbsURL:'new':{productId: product.id} =)">
				{{ i18nAttr('m.rbs.catalog.admin.crosssellingproductlist_crosssellingproductlist_create', ['ucf']) }}
			</a>
		</div>

		<p>{{ i18n('m.rbs.catalog.admin.product_cross_selling_list_help') | raw }}</p>

		<rbs-document-list data-dlid="DLRbsCatalogCrossSellingProductList" model="Rbs_Catalog_CrossSellingProductList"
			activable="true" modification-date="false" load-query="loadQuery">
			<rbs-column name="label" primary="true"></rbs-column>
			<rbs-column name="crossSellingType"></rbs-column>
			<rbs-column name="products" width="150px" label="{{ i18nAttr('m.rbs.catalog.documents.productlist_products', ['ucf']) }}" align="center">
				<a href="(= doc | rbsURL:'productListItems' =)">{{ i18n('m.rbs.catalog.documents.productlist_configure_products', ['ucf']) }} <i class="icon-circle-arrow-right"></i></a>
			</rbs-column>
		</rbs-document-list>
	</div>
</div>
