<div class="row">

	<rbs-workspace-config>
		<rbs-breadcrumb-config>
			<rbs-location href="(= 'Rbs_Catalog'|rbsURL:'home' =)">{{ i18n('m.rbs.catalog.admin.module_name', ['ucf']) }}</rbs-location>
			<rbs-location href="(= 'Rbs_Catalog_ProductList'|rbsURL:'list' =)">{{ i18n('m.rbs.catalog.admin.productlist_list', ['ucf']) }}</rbs-location>
		</rbs-breadcrumb-config>
	</rbs-workspace-config>

	<div rbs-aside-column>
		<rbs-default-asides-for-editor></rbs-default-asides-for-editor>

		<div class="rbs-aside-block" ng-show="document.product">
			<h3 class="panel-title">{{ i18n('m.rbs.catalog.admin.product_concerned_product', ['ucf']) }}</h3>
			<rbs-document-preview document="document.product"></rbs-document-preview>
		</div>
		<a rbs-aside-other-link href="" ng-href="(= document | rbsURL:'productListItems' =)">{{ i18n('m.rbs.catalog.admin.productlist_products_aside_link', ['ucf']) | raw }}</a>
	</div>

	<div class="document-form" rbs-main-column>
		<rbs-page-header document="document" sub-title="{{ i18nAttr(modelKey('Rbs_Catalog_SectionProductList'), ['ucf']) }}"></rbs-page-header>
		<div class="rbs-document-editor rbs-document-editor-rbs-catalog-section-product-list"></div>
	</div>

</div>