<ol class="list-inline form-inline">
	<li>
		<button type="button" class="btn btn-default btn-xs" data-ng-click="delFilter()"><span class="glyphicon glyphicon-minus"></span></button>
	</li>
	<li>(= filterDefinition.config.label =)</li>
	<li ng-show="filterDefinition.config.valueType == 'Boolean'">
		<rbs-switch data-role="filter-value" ng-model="filter.parameters.value" />
	</li>
	<li ng-show="filterDefinition.config.valueType == 'Code'">
		<select class="form-control" data-ng-model="filter.parameters.operator">
			<option value="eq">{{ i18n('m.rbs.admin.admin.equals') }}</option>
			<option value="neq">{{ i18n('m.rbs.admin.admin.isdifferentof') }}</option>
			<option value="contains">{{ i18n('m.rbs.admin.admin.contains') }}</option>
			<option value="beginsWith">{{ i18n('m.rbs.admin.admin.startswith') }}</option>
			<option value="endsWith">{{ i18n('m.rbs.admin.admin.endswith') }}</option>
			<option value="isNull">{{ i18n('m.rbs.admin.admin.isnull') }}</option>
		</select>
	</li>
	<li ng-show="filterDefinition.config.valueType == 'Integer' || filterDefinition.config.valueType == 'Float'">
		<select class="form-control" data-ng-model="filter.parameters.operator">
			<option value="eq">{{ i18n('m.rbs.admin.admin.equals') }}</option>
			<option value="neq">{{ i18n('m.rbs.admin.admin.isdifferentof') }}</option>
			<option value="lte">{{ i18n('m.rbs.admin.admin.islessthanorequals') }}</option>
			<option value="gte">{{ i18n('m.rbs.admin.admin.isgreaterthanorequals') }}</option>
			<option value="isNull">{{ i18n('m.rbs.admin.admin.isnull') }}</option>
		</select>
	</li>
	<li ng-show="filterDefinition.config.valueType == 'DateTime'">
		<select class="form-control" data-ng-model="filter.parameters.operator">
			<option value="lte">{{ i18n('m.rbs.admin.admin.isbefore') }}</option>
			<option value="eq">{{ i18n('m.rbs.admin.admin.ison') }}</option>
			<option value="gte">{{ i18n('m.rbs.admin.admin.isafter') }}</option>
			<option value="isNull">{{ i18n('m.rbs.admin.admin.isnull') }}</option>
		</select>
	</li>
	<li ng-show="filter.parameters.operator != 'isNull'">
		<input type="text" class="form-control" data-ng-model="filter.parameters.value">
		<div class="btn-group" ng-show="filterDefinition.config.possibleValues">
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">{{ i18n('m.rbs.admin.admin.possible_values') }} <span class="caret"></span></button></button>
			<ul class="dropdown-menu pull-right">
				<li data-ng-repeat="opt in filterDefinition.config.possibleValues">
					<a href ng-bind="opt.label" data-ng-click="filter.parameters.value = opt.value"></a>
				</li>
			</ul>
		</div>
	</li>
</ol>