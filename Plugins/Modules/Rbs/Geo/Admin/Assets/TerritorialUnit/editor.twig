{% import "@Admin/forms.twig" as forms %}

<form name="form" data-ng-submit="submit()" class="form-horizontal" novalidate>
	<fieldset data-ng-show="section==''"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.general-properties', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.properties', ['ucf']) }}">
		{{ forms.field('label', 'String', 'm.rbs.geo.document.territorialunit.label', true) }}
		{{ forms.field('code', 'String', 'm.rbs.geo.document.territorialunit.code', true) }}
		{{ forms.field('title', 'String', 'm.rbs.geo.document.territorialunit.title', false) }}
		<div class="alert alert-danger">TODO: liste des types.</div>
		{{ forms.field('unitType', 'String', 'm.rbs.geo.document.territorialunit.unittype', true) }}
		{{ forms.picker('country', 'Rbs_Geo_Country', 'm.rbs.geo.document.territorialunit.country',
			true, null, 'm.rbs.geo.document.territorialunit.country-picker-title') }}
		{{ forms.picker('unitParent', 'Rbs_Geo_TerritorialUnit', 'm.rbs.geo.document.territorialunit.unitparent',
			false, null, 'm.rbs.geo.document.territorialunit.unitparent-picker-title') }}
	</fieldset>

	<fieldset data-ng-show="section=='systeminfo'"
		data-form-section-label="{{ i18nAttr('m.rbs.admin.admin.js.status', ['ucf']) }}"
		data-form-section-group="{{ i18nAttr('m.rbs.admin.information', ['ucf']) }}"
		data-document-system-info-section>
	</fieldset>

	<form-button-bar></form-button-bar>
</form>