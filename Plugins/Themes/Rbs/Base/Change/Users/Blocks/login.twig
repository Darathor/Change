{% if parameters.accessorId != null %}
	<span> Vous êtes actuellement authentifier : {{ parameters.accessorId }}</span>
{% else %}
<form method="post" id="Login" action="Action/Rbs/Users/Login">
	<input type="hidden" name="realm" value="{{ parameters.realm }}">
	<h2>Connectez-vous</h2>
	<input type="text" name="login" class="input-block-level" placeholder="Identifiant">
	<input type="password" name="password" class="input-block-level" placeholder="Mot de passe">
	<label class="checkbox"><input type="checkbox" value="remember-me"> Rester connecté</label>
	<button class="btn btn-large btn-primary" type="submit">Se connecter</button>
</form>
<script type="text/javascript">
	$('#Login').submit(function() {
		var form = $(this);
		var data = form.serialize();
		$.ajax({
			type: "POST",
			url: $(this).attr('action'),
			data: data,
			dataType: 'json',
			success: function(data, textStatus, jqXHR)
			{
				if ('accessorId' in data)
				{
					window.location.reload();
				}
				else
				{
					window.alert(data.error);
				}

			}
		});
		return false;
	});
</script>
{% endif %}